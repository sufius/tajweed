[
  {
    "verse_number": 1,
    "text_uthmani": " وَيْلٌ لِّكُلِّ هُمَزَةٍ لُّمَزَةٍ",
    "text_uthmani_transcribed": "Wailul likulli humazatil-lumazah(tin)."
  },
  {
    "verse_number": 2,
    "text_uthmani": "ٱلَّذِى جَمَعَ مَالًا وَعَدَّدَهُۥ",
    "text_uthmani_transcribed": "Allażī jama'a mālaw wa 'addadah(ū)."
  },
  {
    "verse_number": 3,
    "text_uthmani": "يَحْسَبُ أَنَّ مَالَهُۥٓ أَخْلَدَهُۥ",
    "text_uthmani_transcribed": "Yaḥsabu anna mālahū akhladah(ū)."
  },
  {
    "verse_number": 4,
    "text_uthmani": "كَلَّا ۖ لَيُنۢبَذَنَّ فِى ٱلْحُطَمَةِ",
    "text_uthmani_transcribed": "Kallā layumbażanna fil-ḥuṭamah(ti)."
  },
  {
    "verse_number": 5,
    "text_uthmani": "وَمَآ أَدْرَىٰكَ مَا ٱلْحُطَمَةُ",
    "text_uthmani_transcribed": "Wa mā adrāka mal-ḥuṭamah(tu)."
  },
  {
    "verse_number": 6,
    "text_uthmani": "نَارُ ٱللَّهِ ٱلْمُوقَدَةُ",
    "text_uthmani_transcribed": "Nārullāhil-mūqadah(tu)."
  },
  {
    "verse_number": 7,
    "text_uthmani": "ٱلَّتِى تَطَّلِعُ عَلَى ٱلْأَفْـِٔدَةِ",
    "text_uthmani_transcribed": "Allatī taṭṭali'u 'alal-af'idah(ti)."
  },
  {
    "verse_number": 8,
    "text_uthmani": "إِنَّهَا عَلَيْهِم مُّؤْصَدَةٌ",
    "text_uthmani_transcribed": "Innahā 'alaihim mu'ṣadah(tun)."
  },
  {
    "verse_number": 9,
    "text_uthmani": "فِى عَمَدٍ مُّمَدَّدَةٍۭ",
    "text_uthmani_transcribed": "Fī 'amadim mumaddadah(tin)."
  }
]