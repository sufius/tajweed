[
  {
    "verse_number": 1,
    "text_uthmani": " عَبَسَ وَتَوَلَّىٰٓ",
    "text_uthmani_transcribed": "'Abasa wa tawallā."
  },
  {
    "verse_number": 2,
    "text_uthmani": "أَن جَآءَهُ ٱلْأَعْمَىٰ",
    "text_uthmani_transcribed": "An jā'ahul-a'mā."
  },
  {
    "verse_number": 3,
    "text_uthmani": "وَمَا يُدْرِيكَ لَعَلَّهُۥ يَزَّكَّىٰٓ",
    "text_uthmani_transcribed": "Wa mā yudrīka la'allahū yazzakkā."
  },
  {
    "verse_number": 4,
    "text_uthmani": "أَوْ يَذَّكَّرُ فَتَنفَعَهُ ٱلذِّكْرَىٰٓ",
    "text_uthmani_transcribed": "Au yażżakkaru fatanfa'ahuż-żikrā."
  },
  {
    "verse_number": 5,
    "text_uthmani": "أَمَّا مَنِ ٱسْتَغْنَىٰ",
    "text_uthmani_transcribed": "Ammā manistagnā."
  },
  {
    "verse_number": 6,
    "text_uthmani": "فَأَنتَ لَهُۥ تَصَدَّىٰ",
    "text_uthmani_transcribed": "Fa anta lahū taṣaddā."
  },
  {
    "verse_number": 7,
    "text_uthmani": "وَمَا عَلَيْكَ أَلَّا يَزَّكَّىٰ",
    "text_uthmani_transcribed": "Wa mā 'alaika allā yazzakkā."
  },
  {
    "verse_number": 8,
    "text_uthmani": "وَأَمَّا مَن جَآءَكَ يَسْعَىٰ",
    "text_uthmani_transcribed": "Wa ammā man jā'aka yas'ā."
  },
  {
    "verse_number": 9,
    "text_uthmani": "وَهُوَ يَخْشَىٰ",
    "text_uthmani_transcribed": "Wa huwa yakhsyā."
  },
  {
    "verse_number": 10,
    "text_uthmani": "فَأَنتَ عَنْهُ تَلَهَّىٰ",
    "text_uthmani_transcribed": "Fa anta 'anhu talahhā."
  },
  {
    "verse_number": 11,
    "text_uthmani": "كَلَّآ إِنَّهَا تَذْكِرَةٌ",
    "text_uthmani_transcribed": "Kallā innahā tażkirah(tun)."
  },
  {
    "verse_number": 12,
    "text_uthmani": "فَمَن شَآءَ ذَكَرَهُۥ",
    "text_uthmani_transcribed": "Faman syā'a żakarah(ū)."
  },
  {
    "verse_number": 13,
    "text_uthmani": "فِى صُحُفٍ مُّكَرَّمَةٍ",
    "text_uthmani_transcribed": "Fī ṣuḥufim mukarrmah(tin)."
  },
  {
    "verse_number": 14,
    "text_uthmani": "مَّرْفُوعَةٍ مُّطَهَّرَةٍۭ",
    "text_uthmani_transcribed": "Marfū'atim muṭahharah(tin)."
  },
  {
    "verse_number": 15,
    "text_uthmani": "بِأَيْدِى سَفَرَةٍ",
    "text_uthmani_transcribed": "Bi'aidī safarah(tin)."
  },
  {
    "verse_number": 16,
    "text_uthmani": "كِرَامٍۭ بَرَرَةٍ",
    "text_uthmani_transcribed": "Kirāmim bararah(tin)."
  },
  {
    "verse_number": 17,
    "text_uthmani": "قُتِلَ ٱلْإِنسَـٰنُ مَآ أَكْفَرَهُۥ",
    "text_uthmani_transcribed": "Qutilal-insānu mā akfarah(ū)."
  },
  {
    "verse_number": 18,
    "text_uthmani": "مِنْ أَىِّ شَىْءٍ خَلَقَهُۥ",
    "text_uthmani_transcribed": "Min ayyi syai'in khalaqah(ū)."
  },
  {
    "verse_number": 19,
    "text_uthmani": "مِن نُّطْفَةٍ خَلَقَهُۥ فَقَدَّرَهُۥ",
    "text_uthmani_transcribed": "Min nuṭfah(tin), khalaqahū fa qaddarah(ū)."
  },
  {
    "verse_number": 20,
    "text_uthmani": "ثُمَّ ٱلسَّبِيلَ يَسَّرَهُۥ",
    "text_uthmani_transcribed": "Ṡummas-sabīla yassarah(ū)."
  },
  {
    "verse_number": 21,
    "text_uthmani": "ثُمَّ أَمَاتَهُۥ فَأَقْبَرَهُۥ",
    "text_uthmani_transcribed": "Ṡumma amātahū fa aqbarah(ū)."
  },
  {
    "verse_number": 22,
    "text_uthmani": "ثُمَّ إِذَا شَآءَ أَنشَرَهُۥ",
    "text_uthmani_transcribed": "Ṡumma iżā syā'a ansyarah(ū)."
  },
  {
    "verse_number": 23,
    "text_uthmani": "كَلَّا لَمَّا يَقْضِ مَآ أَمَرَهُۥ",
    "text_uthmani_transcribed": "Kallā lammā yaqḍi mā amarah(ū)."
  },
  {
    "verse_number": 24,
    "text_uthmani": "فَلْيَنظُرِ ٱلْإِنسَـٰنُ إِلَىٰ طَعَامِهِۦٓ",
    "text_uthmani_transcribed": "Falyanẓuril-insānu ilā ṭa'āmih(ī)."
  },
  {
    "verse_number": 25,
    "text_uthmani": "أَنَّا صَبَبْنَا ٱلْمَآءَ صَبًّا",
    "text_uthmani_transcribed": "Annā ṣababnal-mā'a ṣabbā(n)."
  },
  {
    "verse_number": 26,
    "text_uthmani": "ثُمَّ شَقَقْنَا ٱلْأَرْضَ شَقًّا",
    "text_uthmani_transcribed": "Ṡumma syaqaqnal-arḍa syaqqā(n)."
  },
  {
    "verse_number": 27,
    "text_uthmani": "فَأَنۢبَتْنَا فِيهَا حَبًّا",
    "text_uthmani_transcribed": "Fa'ambatnā fīhā ḥabbā(n)."
  },
  {
    "verse_number": 28,
    "text_uthmani": "وَعِنَبًا وَقَضْبًا",
    "text_uthmani_transcribed": "Wa 'inabaw wa qaḍbā(n)."
  },
  {
    "verse_number": 29,
    "text_uthmani": "وَزَيْتُونًا وَنَخْلًا",
    "text_uthmani_transcribed": "Wa zaitūnaw wa nakhlā(n)."
  },
  {
    "verse_number": 30,
    "text_uthmani": "وَحَدَآئِقَ غُلْبًا",
    "text_uthmani_transcribed": "Wa ḥadā'iqa gulbā(n)."
  },
  {
    "verse_number": 31,
    "text_uthmani": "وَفَـٰكِهَةً وَأَبًّا",
    "text_uthmani_transcribed": "Wa fākihataw wa abbā(n)."
  },
  {
    "verse_number": 32,
    "text_uthmani": "مَّتَـٰعًا لَّكُمْ وَلِأَنْعَـٰمِكُمْ",
    "text_uthmani_transcribed": "Matā'al lakum wa li'an'āmikum."
  },
  {
    "verse_number": 33,
    "text_uthmani": "فَإِذَا جَآءَتِ ٱلصَّآخَّةُ",
    "text_uthmani_transcribed": "Fa iżā jā'atiṣ-ṣākhkhah(tu)."
  },
  {
    "verse_number": 34,
    "text_uthmani": "يَوْمَ يَفِرُّ ٱلْمَرْءُ مِنْ أَخِيهِ",
    "text_uthmani_transcribed": "Yauma yafirrul-mar'u min akhīh(i)."
  },
  {
    "verse_number": 35,
    "text_uthmani": "وَأُمِّهِۦ وَأَبِيهِ",
    "text_uthmani_transcribed": "Wa ummihī wa abīh(i)."
  },
  {
    "verse_number": 36,
    "text_uthmani": "وَصَـٰحِبَتِهِۦ وَبَنِيهِ",
    "text_uthmani_transcribed": "Wa ṣāḥibatihī wa banīh(i)."
  },
  {
    "verse_number": 37,
    "text_uthmani": "لِكُلِّ ٱمْرِئٍ مِّنْهُمْ يَوْمَئِذٍ شَأْنٌ يُغْنِيهِ",
    "text_uthmani_transcribed": "Likullimri'im minhum yauma'iżin sya'nuy yugnīh(i)."
  },
  {
    "verse_number": 38,
    "text_uthmani": "وُجُوهٌ يَوْمَئِذٍ مُّسْفِرَةٌ",
    "text_uthmani_transcribed": "Wujūhuy yauma'iżim musfirah(tun)."
  },
  {
    "verse_number": 39,
    "text_uthmani": "ضَاحِكَةٌ مُّسْتَبْشِرَةٌ",
    "text_uthmani_transcribed": "Ḍāḥikatum mustabsyirah(tun)."
  },
  {
    "verse_number": 40,
    "text_uthmani": "وَوُجُوهٌ يَوْمَئِذٍ عَلَيْهَا غَبَرَةٌ",
    "text_uthmani_transcribed": "Wa wujūhuy yauma'iżin 'alaihā gabarah(tun)."
  },
  {
    "verse_number": 41,
    "text_uthmani": "تَرْهَقُهَا قَتَرَةٌ",
    "text_uthmani_transcribed": "Tarhaquhā qatarah(tun)."
  },
  {
    "verse_number": 42,
    "text_uthmani": "أُو۟لَـٰٓئِكَ هُمُ ٱلْكَفَرَةُ ٱلْفَجَرَةُ",
    "text_uthmani_transcribed": "Ulā'ika humul-kafaratul-fajarah(tu)."
  }
]