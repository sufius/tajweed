[
  {
    "verse_number": 1,
    "text_uthmani": "بِسْمِ ٱللَّهِ ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ",
    "text_uthmani_transcribed": "Bismillāhir-raḥmānir-raḥīm(i)."
  },
  {
    "verse_number": 2,
    "text_uthmani": "ٱلْحَمْدُ لِلَّهِ رَبِّ ٱلْعَـٰلَمِينَ",
    "text_uthmani_transcribed": "Al-ḥamdu lillāhi rabbil-'ālamīn(a)."
  },
  {
    "verse_number": 3,
    "text_uthmani": "ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ",
    "text_uthmani_transcribed": "Ar-raḥmānir-raḥīm(i)."
  },
  {
    "verse_number": 4,
    "text_uthmani": "مَـٰلِكِ يَوْمِ ٱلدِّينِ",
    "text_uthmani_transcribed": "Māliki yaumid-dīn(i)."
  },
  {
    "verse_number": 5,
    "text_uthmani": "إِيَّاكَ نَعْبُدُ وَإِيَّاكَ نَسْتَعِينُ",
    "text_uthmani_transcribed": "Iyyāka na'budu wa iyyāka nasta'īn(u),"
  },
  {
    "verse_number": 6,
    "text_uthmani": "ٱهْدِنَا ٱلصِّرَٰطَ ٱلْمُسْتَقِيمَ",
    "text_uthmani_transcribed": "Ihdinaṣ-ṣirāṭal-mustaqīm(a)."
  },
  {
    "verse_number": 7,
    "text_uthmani": "صِرَٰطَ ٱلَّذِينَ أَنْعَمْتَ عَلَيْهِمْ غَيْرِ ٱلْمَغْضُوبِ عَلَيْهِمْ وَلَا ٱلضَّآلِّينَ",
    "text_uthmani_transcribed": "Ṣirāṭal-lażīna an'amta 'alaihim, gairil-magḍūbi 'alaihim wa laḍ-ḍāllīn(a)."
  }
]