[
  {
    "verse_number": 1,
    "text_uthmani": " لَآ أُقْسِمُ بِهَـٰذَا ٱلْبَلَدِ",
    "text_uthmani_transcribed": "Lā uqsimu bihāżal-balad(i)."
  },
  {
    "verse_number": 2,
    "text_uthmani": "وَأَنتَ حِلٌّۢ بِهَـٰذَا ٱلْبَلَدِ",
    "text_uthmani_transcribed": "Wa anta ḥillum bihāżal-balad(i)."
  },
  {
    "verse_number": 3,
    "text_uthmani": "وَوَالِدٍ وَمَا وَلَدَ",
    "text_uthmani_transcribed": "Wa wālidiw wa mā walad(a)."
  },
  {
    "verse_number": 4,
    "text_uthmani": "لَقَدْ خَلَقْنَا ٱلْإِنسَـٰنَ فِى كَبَدٍ",
    "text_uthmani_transcribed": "Laqad khalaqnal-insāna fī kabad(in)."
  },
  {
    "verse_number": 5,
    "text_uthmani": "أَيَحْسَبُ أَن لَّن يَقْدِرَ عَلَيْهِ أَحَدٌ",
    "text_uthmani_transcribed": "Ayaḥsabu allay yaqdira 'alaihi  aḥad(un)."
  },
  {
    "verse_number": 6,
    "text_uthmani": "يَقُولُ أَهْلَكْتُ مَالًا لُّبَدًا",
    "text_uthmani_transcribed": "Yaqūlu ahlaktu mālal lubadā(n)."
  },
  {
    "verse_number": 7,
    "text_uthmani": "أَيَحْسَبُ أَن لَّمْ يَرَهُۥٓ أَحَدٌ",
    "text_uthmani_transcribed": "Ayaḥsabu allam yarahū aḥad(un)."
  },
  {
    "verse_number": 8,
    "text_uthmani": "أَلَمْ نَجْعَل لَّهُۥ عَيْنَيْنِ",
    "text_uthmani_transcribed": "Alam naj'al lahū 'ainain(i)."
  },
  {
    "verse_number": 9,
    "text_uthmani": "وَلِسَانًا وَشَفَتَيْنِ",
    "text_uthmani_transcribed": "Wa lisānaw wa syafatain(i)."
  },
  {
    "verse_number": 10,
    "text_uthmani": "وَهَدَيْنَـٰهُ ٱلنَّجْدَيْنِ",
    "text_uthmani_transcribed": "Wa hadaināhun-najdain(i)."
  },
  {
    "verse_number": 11,
    "text_uthmani": "فَلَا ٱقْتَحَمَ ٱلْعَقَبَةَ",
    "text_uthmani_transcribed": "Falaqtaḥamal-'aqabah(ta)."
  },
  {
    "verse_number": 12,
    "text_uthmani": "وَمَآ أَدْرَىٰكَ مَا ٱلْعَقَبَةُ",
    "text_uthmani_transcribed": "Wa mā adrāka mal-'aqabah(tu)."
  },
  {
    "verse_number": 13,
    "text_uthmani": "فَكُّ رَقَبَةٍ",
    "text_uthmani_transcribed": "Fakku raqabah(tin)."
  },
  {
    "verse_number": 14,
    "text_uthmani": "أَوْ إِطْعَـٰمٌ فِى يَوْمٍ ذِى مَسْغَبَةٍ",
    "text_uthmani_transcribed": "Au iṭ'āmun fī yaumin żī masgabah(tin)."
  },
  {
    "verse_number": 15,
    "text_uthmani": "يَتِيمًا ذَا مَقْرَبَةٍ",
    "text_uthmani_transcribed": "Yatīman żā maqrabah(tin)."
  },
  {
    "verse_number": 16,
    "text_uthmani": "أَوْ مِسْكِينًا ذَا مَتْرَبَةٍ",
    "text_uthmani_transcribed": "Au miskīnan żā matrabah(tin)."
  },
  {
    "verse_number": 17,
    "text_uthmani": "ثُمَّ كَانَ مِنَ ٱلَّذِينَ ءَامَنُوا۟ وَتَوَاصَوْا۟ بِٱلصَّبْرِ وَتَوَاصَوْا۟ بِٱلْمَرْحَمَةِ",
    "text_uthmani_transcribed": "Ṡumma kāna minal-lażīna āmanū wa tawāṣau biṣ-ṣabri wa tawāṣau bil-marḥamah(ti)."
  },
  {
    "verse_number": 18,
    "text_uthmani": "أُو۟لَـٰٓئِكَ أَصْحَـٰبُ ٱلْمَيْمَنَةِ",
    "text_uthmani_transcribed": "Ulā'ika aṣḥābul-maimanah(ti)."
  },
  {
    "verse_number": 19,
    "text_uthmani": "وَٱلَّذِينَ كَفَرُوا۟ بِـَٔايَـٰتِنَا هُمْ أَصْحَـٰبُ ٱلْمَشْـَٔمَةِ",
    "text_uthmani_transcribed": "Wal-lażīna kafarū bi'āyātinā hum aṣḥābul-masy'amah(ti)."
  },
  {
    "verse_number": 20,
    "text_uthmani": "عَلَيْهِمْ نَارٌ مُّؤْصَدَةٌۢ",
    "text_uthmani_transcribed": "'Alaihim nārum mu'ṣadah(tun)."
  }
]