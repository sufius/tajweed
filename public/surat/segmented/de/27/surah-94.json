[
  {
    "index": 1,
    "verse_number": 1,
    "translation": "Haben Wir dir nicht deine Brust aufgetan",
    "arabic": " أَلَمْ نَشْرَحْ لَكَ صَدْرَكَ",
    "transcription": "Alam nasyraḥ laka ṣadrak(a)."
  },
  {
    "index": 2,
    "verse_number": 2,
    "translation": "und dir deine Last abgenommen,",
    "arabic": "وَوَضَعْنَا عَنكَ وِزْرَكَ",
    "transcription": "Wa waḍa'nā 'anka wizrak(a)."
  },
  {
    "index": 3,
    "verse_number": 3,
    "translation": "die deinen Rücken niederdrückte,",
    "arabic": "ٱلَّذِىٓ أَنقَضَ ظَهْرَكَ",
    "transcription": "Allażī anqaḍa ẓahrak(a)."
  },
  {
    "index": 4,
    "verse_number": 4,
    "translation": "und dir dein Ansehen erhöht?",
    "arabic": "وَرَفَعْنَا لَكَ ذِكْرَكَ",
    "transcription": "Wa rafa'nā laka żikrak(a)."
  },
  {
    "index": 5,
    "verse_number": 5,
    "translation": "Also gewiß, mit der Erschwernis ist Erleichterung,",
    "arabic": "فَإِنَّ مَعَ ٱلْعُسْرِ يُسْرًا",
    "transcription": "Fa'inna ma'al-'usri yusrā(n)."
  },
  {
    "index": 6,
    "verse_number": 6,
    "translation": "gewiß, mit der Erschwernis ist Erleichterung.",
    "arabic": "إِنَّ مَعَ ٱلْعُسْرِ يُسْرًا",
    "transcription": "Inna ma'al-'usri yusrā(n)."
  },
  {
    "index": 7,
    "verse_number": 7,
    "translation": "Wenn du nun fertig bist, dann strenge dich an",
    "arabic": "فَإِذَا فَرَغْتَ فَٱنصَبْ",
    "transcription": "Fa iżā faragta fanṣab."
  },
  {
    "index": 8,
    "verse_number": 8,
    "translation": "und nach deinem Herrn richte dein Begehren aus.",
    "arabic": "وَإِلَىٰ رَبِّكَ فَٱرْغَب",
    "transcription": "Wa ilā rabbika fargab."
  }
]