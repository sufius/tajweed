[
  {
    "verse_number": 1,
    "text_uthmani": " ٱلْقَارِعَةُ",
    "text_uthmani_transcribed": "Al-qāri'ah(tu)."
  },
  {
    "verse_number": 2,
    "text_uthmani": "مَا ٱلْقَارِعَةُ",
    "text_uthmani_transcribed": "Mal-qāri'ah(tu)."
  },
  {
    "verse_number": 3,
    "text_uthmani": "وَمَآ أَدْرَىٰكَ مَا ٱلْقَارِعَةُ",
    "text_uthmani_transcribed": "Wa mā adrāka mal-qāri'ah(tu)."
  },
  {
    "verse_number": 4,
    "text_uthmani": "يَوْمَ يَكُونُ ٱلنَّاسُ كَٱلْفَرَاشِ ٱلْمَبْثُوثِ",
    "text_uthmani_transcribed": "Yauma yakūnun-nāsu kal-farāsyil-mabṡūṡ(i)."
  },
  {
    "verse_number": 5,
    "text_uthmani": "وَتَكُونُ ٱلْجِبَالُ كَٱلْعِهْنِ ٱلْمَنفُوشِ",
    "text_uthmani_transcribed": "Wa takūnul-jibālu kal-'ihnil-manfūsy(i)."
  },
  {
    "verse_number": 6,
    "text_uthmani": "فَأَمَّا مَن ثَقُلَتْ مَوَٰزِينُهُۥ",
    "text_uthmani_transcribed": "Fa ammā man ṡaqulat mawāzīnuh(ū)."
  },
  {
    "verse_number": 7,
    "text_uthmani": "فَهُوَ فِى عِيشَةٍ رَّاضِيَةٍ",
    "text_uthmani_transcribed": "Fa huwa fī 'īsyatir rāḍiyah(tin)."
  },
  {
    "verse_number": 8,
    "text_uthmani": "وَأَمَّا مَنْ خَفَّتْ مَوَٰزِينُهُۥ",
    "text_uthmani_transcribed": "Wa ammā man khaffat mawāzīnuh(ū)."
  },
  {
    "verse_number": 9,
    "text_uthmani": "فَأُمُّهُۥ هَاوِيَةٌ",
    "text_uthmani_transcribed": "Fa ummuhū hāwiyah(tun)."
  },
  {
    "verse_number": 10,
    "text_uthmani": "وَمَآ أَدْرَىٰكَ مَا هِيَهْ",
    "text_uthmani_transcribed": "Wa mā adrāka mā hiyah."
  },
  {
    "verse_number": 11,
    "text_uthmani": "نَارٌ حَامِيَةٌۢ",
    "text_uthmani_transcribed": "Nārun ḥāmiyah(tun)."
  }
]