[
  {
    "verse_number": 1,
    "arabic": " وَٱلَّيْلِ إِذَا يَغْشَىٰ",
    "transcription": "Wal-laili iżā yagsyā."
  },
  {
    "verse_number": 2,
    "arabic": "وَٱلنَّهَارِ إِذَا تَجَلَّىٰ",
    "transcription": "Wan-nahāri iżā tajallā."
  },
  {
    "verse_number": 3,
    "arabic": "وَمَا خَلَقَ ٱلذَّكَرَ وَٱلْأُنثَىٰٓ",
    "transcription": "Wa mā khalaqaż-żakara wal-unṡā."
  },
  {
    "verse_number": 4,
    "arabic": "إِنَّ سَعْيَكُمْ لَشَتَّىٰ",
    "transcription": "Inna sa'yakum lasyattā."
  },
  {
    "verse_number": 5,
    "arabic": "فَأَمَّا مَنْ أَعْطَىٰ وَٱتَّقَىٰ",
    "transcription": "Fa ammā man a'ṭā wattaqā."
  },
  {
    "verse_number": 6,
    "arabic": "وَصَدَّقَ بِٱلْحُسْنَىٰ",
    "transcription": "Wa ṣaddaqa bil-ḥusnā."
  },
  {
    "verse_number": 7,
    "arabic": "فَسَنُيَسِّرُهُۥ لِلْيُسْرَىٰ",
    "transcription": "Fa sanuyassiruhū lil-yusrā."
  },
  {
    "verse_number": 8,
    "arabic": "وَأَمَّا مَنۢ بَخِلَ وَٱسْتَغْنَىٰ",
    "transcription": "Wa ammā man bakhila wastagnā."
  },
  {
    "verse_number": 9,
    "arabic": "وَكَذَّبَ بِٱلْحُسْنَىٰ",
    "transcription": "Wa każżaba bil-ḥusnā."
  },
  {
    "verse_number": 10,
    "arabic": "فَسَنُيَسِّرُهُۥ لِلْعُسْرَىٰ",
    "transcription": "Fa sanuyassiruhū lil-'usrā."
  },
  {
    "verse_number": 11,
    "arabic": "وَمَا يُغْنِى عَنْهُ مَالُهُۥٓ إِذَا تَرَدَّىٰٓ",
    "transcription": "Wa mā yugnī 'anhu māluhū iżā taraddā."
  },
  {
    "verse_number": 12,
    "arabic": "إِنَّ عَلَيْنَا لَلْهُدَىٰ",
    "transcription": "Inna 'alainā lal-hudā."
  },
  {
    "verse_number": 13,
    "arabic": "وَإِنَّ لَنَا لَلْـَٔاخِرَةَ وَٱلْأُولَىٰ",
    "transcription": "Wa inna lanā lal-ākhirata wal-ūlā."
  },
  {
    "verse_number": 14,
    "arabic": "فَأَنذَرْتُكُمْ نَارًا تَلَظَّىٰ",
    "transcription": "Fa anżartukum nāran talaẓẓā."
  },
  {
    "verse_number": 15,
    "arabic": "لَا يَصْلَىٰهَآ إِلَّا ٱلْأَشْقَى",
    "transcription": "Lā yaṣlāhā illal-asyqā."
  },
  {
    "verse_number": 16,
    "arabic": "ٱلَّذِى كَذَّبَ وَتَوَلَّىٰ",
    "transcription": "Allażī każżaba wa tawallā."
  },
  {
    "verse_number": 17,
    "arabic": "وَسَيُجَنَّبُهَا ٱلْأَتْقَى",
    "transcription": "Wa sayujannabuhal-atqā."
  },
  {
    "verse_number": 18,
    "arabic": "ٱلَّذِى يُؤْتِى مَالَهُۥ يَتَزَكَّىٰ",
    "transcription": "Allażī yu'tī mālahū yatazakkā."
  },
  {
    "verse_number": 19,
    "arabic": "وَمَا لِأَحَدٍ عِندَهُۥ مِن نِّعْمَةٍ تُجْزَىٰٓ",
    "transcription": "Wa mā li'aḥadin 'indahū min ni'matin tujzā."
  },
  {
    "verse_number": 20,
    "arabic": "إِلَّا ٱبْتِغَآءَ وَجْهِ رَبِّهِ ٱلْأَعْلَىٰ",
    "transcription": "Illabtigā'a wajhi rabbihil-a'lā."
  },
  {
    "verse_number": 21,
    "arabic": "وَلَسَوْفَ يَرْضَىٰ",
    "transcription": "Wa lasaufa yarḍā."
  }
]