[
  {
    "verse_number": 1,
    "text_uthmani": " وَٱلَّيْلِ إِذَا يَغْشَىٰ",
    "text_uthmani_transcribed": "Wal-laili iżā yagsyā."
  },
  {
    "verse_number": 2,
    "text_uthmani": "وَٱلنَّهَارِ إِذَا تَجَلَّىٰ",
    "text_uthmani_transcribed": "Wan-nahāri iżā tajallā."
  },
  {
    "verse_number": 3,
    "text_uthmani": "وَمَا خَلَقَ ٱلذَّكَرَ وَٱلْأُنثَىٰٓ",
    "text_uthmani_transcribed": "Wa mā khalaqaż-żakara wal-unṡā."
  },
  {
    "verse_number": 4,
    "text_uthmani": "إِنَّ سَعْيَكُمْ لَشَتَّىٰ",
    "text_uthmani_transcribed": "Inna sa'yakum lasyattā."
  },
  {
    "verse_number": 5,
    "text_uthmani": "فَأَمَّا مَنْ أَعْطَىٰ وَٱتَّقَىٰ",
    "text_uthmani_transcribed": "Fa ammā man a'ṭā wattaqā."
  },
  {
    "verse_number": 6,
    "text_uthmani": "وَصَدَّقَ بِٱلْحُسْنَىٰ",
    "text_uthmani_transcribed": "Wa ṣaddaqa bil-ḥusnā."
  },
  {
    "verse_number": 7,
    "text_uthmani": "فَسَنُيَسِّرُهُۥ لِلْيُسْرَىٰ",
    "text_uthmani_transcribed": "Fa sanuyassiruhū lil-yusrā."
  },
  {
    "verse_number": 8,
    "text_uthmani": "وَأَمَّا مَنۢ بَخِلَ وَٱسْتَغْنَىٰ",
    "text_uthmani_transcribed": "Wa ammā man bakhila wastagnā."
  },
  {
    "verse_number": 9,
    "text_uthmani": "وَكَذَّبَ بِٱلْحُسْنَىٰ",
    "text_uthmani_transcribed": "Wa każżaba bil-ḥusnā."
  },
  {
    "verse_number": 10,
    "text_uthmani": "فَسَنُيَسِّرُهُۥ لِلْعُسْرَىٰ",
    "text_uthmani_transcribed": "Fa sanuyassiruhū lil-'usrā."
  },
  {
    "verse_number": 11,
    "text_uthmani": "وَمَا يُغْنِى عَنْهُ مَالُهُۥٓ إِذَا تَرَدَّىٰٓ",
    "text_uthmani_transcribed": "Wa mā yugnī 'anhu māluhū iżā taraddā."
  },
  {
    "verse_number": 12,
    "text_uthmani": "إِنَّ عَلَيْنَا لَلْهُدَىٰ",
    "text_uthmani_transcribed": "Inna 'alainā lal-hudā."
  },
  {
    "verse_number": 13,
    "text_uthmani": "وَإِنَّ لَنَا لَلْـَٔاخِرَةَ وَٱلْأُولَىٰ",
    "text_uthmani_transcribed": "Wa inna lanā lal-ākhirata wal-ūlā."
  },
  {
    "verse_number": 14,
    "text_uthmani": "فَأَنذَرْتُكُمْ نَارًا تَلَظَّىٰ",
    "text_uthmani_transcribed": "Fa anżartukum nāran talaẓẓā."
  },
  {
    "verse_number": 15,
    "text_uthmani": "لَا يَصْلَىٰهَآ إِلَّا ٱلْأَشْقَى",
    "text_uthmani_transcribed": "Lā yaṣlāhā illal-asyqā."
  },
  {
    "verse_number": 16,
    "text_uthmani": "ٱلَّذِى كَذَّبَ وَتَوَلَّىٰ",
    "text_uthmani_transcribed": "Allażī każżaba wa tawallā."
  },
  {
    "verse_number": 17,
    "text_uthmani": "وَسَيُجَنَّبُهَا ٱلْأَتْقَى",
    "text_uthmani_transcribed": "Wa sayujannabuhal-atqā."
  },
  {
    "verse_number": 18,
    "text_uthmani": "ٱلَّذِى يُؤْتِى مَالَهُۥ يَتَزَكَّىٰ",
    "text_uthmani_transcribed": "Allażī yu'tī mālahū yatazakkā."
  },
  {
    "verse_number": 19,
    "text_uthmani": "وَمَا لِأَحَدٍ عِندَهُۥ مِن نِّعْمَةٍ تُجْزَىٰٓ",
    "text_uthmani_transcribed": "Wa mā li'aḥadin 'indahū min ni'matin tujzā."
  },
  {
    "verse_number": 20,
    "text_uthmani": "إِلَّا ٱبْتِغَآءَ وَجْهِ رَبِّهِ ٱلْأَعْلَىٰ",
    "text_uthmani_transcribed": "Illabtigā'a wajhi rabbihil-a'lā."
  },
  {
    "verse_number": 21,
    "text_uthmani": "وَلَسَوْفَ يَرْضَىٰ",
    "text_uthmani_transcribed": "Wa lasaufa yarḍā."
  }
]