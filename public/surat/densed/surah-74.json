[
  {
    "verse_number": 1,
    "arabic": " يَـٰٓأَيُّهَا ٱلْمُدَّثِّرُ",
    "transcription": "Yā ayyuhal-muddaṡṡir(u)."
  },
  {
    "verse_number": 2,
    "arabic": "قُمْ فَأَنذِرْ",
    "transcription": "Qum fa'anżir."
  },
  {
    "verse_number": 3,
    "arabic": "وَرَبَّكَ فَكَبِّرْ",
    "transcription": "Wa rabbaka fakabbir."
  },
  {
    "verse_number": 4,
    "arabic": "وَثِيَابَكَ فَطَهِّرْ",
    "transcription": "Wa ṡiyābaka faṭahhir."
  },
  {
    "verse_number": 5,
    "arabic": "وَٱلرُّجْزَ فَٱهْجُرْ",
    "transcription": "War-rujza fahjur."
  },
  {
    "verse_number": 6,
    "arabic": "وَلَا تَمْنُن تَسْتَكْثِرُ",
    "transcription": "Wa lā tamnun tastakṡir(u)."
  },
  {
    "verse_number": 7,
    "arabic": "وَلِرَبِّكَ فَٱصْبِرْ",
    "transcription": "Wa lirabbika faṣbir."
  },
  {
    "verse_number": 8,
    "arabic": "فَإِذَا نُقِرَ فِى ٱلنَّاقُورِ",
    "transcription": "Fa iżā nuqira fin-nāqūr(i)."
  },
  {
    "verse_number": 9,
    "arabic": "فَذَٰلِكَ يَوْمَئِذٍ يَوْمٌ عَسِيرٌ",
    "transcription": "Fa żālika yauma'iżiy yaumun 'asīr(un)."
  },
  {
    "verse_number": 10,
    "arabic": "عَلَى ٱلْكَـٰفِرِينَ غَيْرُ يَسِيرٍ",
    "transcription": "'Alal-kāfirīna gairu yasīr(in)."
  },
  {
    "verse_number": 11,
    "arabic": "ذَرْنِى وَمَنْ خَلَقْتُ وَحِيدًا",
    "transcription": "Żarnī wa man khalaqtu waḥīdā(n)."
  },
  {
    "verse_number": 12,
    "arabic": "وَجَعَلْتُ لَهُۥ مَالًا مَّمْدُودًا",
    "transcription": "Wa ja'altu lahū mālam mamdūdā(n)."
  },
  {
    "verse_number": 13,
    "arabic": "وَبَنِينَ شُهُودًا",
    "transcription": "Wa banīna syuhūdā(n)."
  },
  {
    "verse_number": 14,
    "arabic": "وَمَهَّدتُّ لَهُۥ تَمْهِيدًا",
    "transcription": "Wa mahhattu lahū tamhīdā(n)."
  },
  {
    "verse_number": 15,
    "arabic": "ثُمَّ يَطْمَعُ أَنْ أَزِيدَ",
    "transcription": "Ṡumma yaṭma'u an azīd(a)."
  },
  {
    "verse_number": 16,
    "arabic": "كَلَّآ ۖ إِنَّهُۥ كَانَ لِـَٔايَـٰتِنَا عَنِيدًا",
    "transcription": "Kallā, innahū kāna li'āyātinā 'anīdā(n)."
  },
  {
    "verse_number": 17,
    "arabic": "سَأُرْهِقُهُۥ صَعُودًا",
    "transcription": "Sa'urhiquhū ṣa'ūdā(n)."
  },
  {
    "verse_number": 18,
    "arabic": "إِنَّهُۥ فَكَّرَ وَقَدَّرَ",
    "transcription": "Innahū fakkara wa qaddar(a)."
  },
  {
    "verse_number": 19,
    "arabic": "فَقُتِلَ كَيْفَ قَدَّرَ",
    "transcription": "Faqutila kaifa qaddar(a)."
  },
  {
    "verse_number": 20,
    "arabic": "ثُمَّ قُتِلَ كَيْفَ قَدَّرَ",
    "transcription": "Ṡumma qutila kaifa qaddar(a)."
  },
  {
    "verse_number": 21,
    "arabic": "ثُمَّ نَظَرَ",
    "transcription": "Ṡumma naẓar(a)."
  },
  {
    "verse_number": 22,
    "arabic": "ثُمَّ عَبَسَ وَبَسَرَ",
    "transcription": "Ṡumma 'abasa wa basar(a)."
  },
  {
    "verse_number": 23,
    "arabic": "ثُمَّ أَدْبَرَ وَٱسْتَكْبَرَ",
    "transcription": "Ṡumma adbara wastakbar(a)."
  },
  {
    "verse_number": 24,
    "arabic": "فَقَالَ إِنْ هَـٰذَآ إِلَّا سِحْرٌ يُؤْثَرُ",
    "transcription": "Faqāla in hāżā illā siḥruy yu'ṡar(u)."
  },
  {
    "verse_number": 25,
    "arabic": "إِنْ هَـٰذَآ إِلَّا قَوْلُ ٱلْبَشَرِ",
    "transcription": "In hāżā illā qaulul-basyar(i)."
  },
  {
    "verse_number": 26,
    "arabic": "سَأُصْلِيهِ سَقَرَ",
    "transcription": "Sa'uṣlīhi saqar(a)."
  },
  {
    "verse_number": 27,
    "arabic": "وَمَآ أَدْرَىٰكَ مَا سَقَرُ",
    "transcription": "Wa mā adrāka mā saqar(a)."
  },
  {
    "verse_number": 28,
    "arabic": "لَا تُبْقِى وَلَا تَذَرُ",
    "transcription": "Lā tubqī wa lā tażar(u)."
  },
  {
    "verse_number": 29,
    "arabic": "لَوَّاحَةٌ لِّلْبَشَرِ",
    "transcription": "Lawwāḥatul lil-basyar(i)."
  },
  {
    "verse_number": 30,
    "arabic": "عَلَيْهَا تِسْعَةَ عَشَرَ",
    "transcription": "'Alaihā tis'ata 'asyar(a)."
  },
  {
    "verse_number": 31,
    "arabic": "وَمَا جَعَلْنَآ أَصْحَـٰبَ ٱلنَّارِ إِلَّا مَلَـٰٓئِكَةً ۙ وَمَا جَعَلْنَا عِدَّتَهُمْ إِلَّا فِتْنَةً لِّلَّذِينَ كَفَرُوا۟ لِيَسْتَيْقِنَ ٱلَّذِينَ أُوتُوا۟ ٱلْكِتَـٰبَ وَيَزْدَادَ ٱلَّذِينَ ءَامَنُوٓا۟ إِيمَـٰنًا ۙ وَلَا يَرْتَابَ ٱلَّذِينَ أُوتُوا۟ ٱلْكِتَـٰبَ وَٱلْمُؤْمِنُونَ ۙ وَلِيَقُولَ ٱلَّذِينَ فِى قُلُوبِهِم مَّرَضٌ وَٱلْكَـٰفِرُونَ مَاذَآ أَرَادَ ٱللَّهُ بِهَـٰذَا مَثَلًا ۚ كَذَٰلِكَ يُضِلُّ ٱللَّهُ مَن يَشَآءُ وَيَهْدِى مَن يَشَآءُ ۚ وَمَا يَعْلَمُ جُنُودَ رَبِّكَ إِلَّا هُوَ ۚ وَمَا هِىَ إِلَّا ذِكْرَىٰ لِلْبَشَرِ",
    "transcription": "Wa mā ja'alnā aṣḥāban-nāri illā malā'ikah(tan), wa mā ja'alnā 'iddatahum illā fitnatal lil-lażīna kafarū, liyastaiqinal-lażīna ūtul-kitāba wa yazdādal-lażīna āmanū īmānaw wa lā yartābal-lażīna ūtul-kitāba wal-mu'minūn(a), wa liyaqūlal-lażīna fī qulūbihim maraḍuw wal-kāfirūna māżā arādallāhu bihāżā maṡalā(n), każālika yuḍillullāhu may yasyā'u wa yahdī may yasyā'(u), wa mā ya'lamu junūda rabbika illā huw(a), wa mā hiya illā żikrā lil-basyar(i)."
  },
  {
    "verse_number": 32,
    "arabic": "كَلَّا وَٱلْقَمَرِ",
    "transcription": "Kallā wal-qamar(i)."
  },
  {
    "verse_number": 33,
    "arabic": "وَٱلَّيْلِ إِذْ أَدْبَرَ",
    "transcription": "Wal-laili iż adbar(a)."
  },
  {
    "verse_number": 34,
    "arabic": "وَٱلصُّبْحِ إِذَآ أَسْفَرَ",
    "transcription": "Waṣ-ṣubḥi iżā asfar(a)."
  },
  {
    "verse_number": 35,
    "arabic": "إِنَّهَا لَإِحْدَى ٱلْكُبَرِ",
    "transcription": "Innahā la'iḥdal-kubar(i)."
  },
  {
    "verse_number": 36,
    "arabic": "نَذِيرًا لِّلْبَشَرِ",
    "transcription": "Nażīral lil-basyar(i)."
  },
  {
    "verse_number": 37,
    "arabic": "لِمَن شَآءَ مِنكُمْ أَن يَتَقَدَّمَ أَوْ يَتَأَخَّرَ",
    "transcription": "Liman syā'a minkum ay yataqaddama au yata'akhkhar(a)."
  },
  {
    "verse_number": 38,
    "arabic": "كُلُّ نَفْسٍۭ بِمَا كَسَبَتْ رَهِينَةٌ",
    "transcription": "Kullu nafsim bimā kasabat rahīnah(tun)."
  },
  {
    "verse_number": 39,
    "arabic": "إِلَّآ أَصْحَـٰبَ ٱلْيَمِينِ",
    "transcription": "Illā aṣḥābal-yamīn(i)."
  },
  {
    "verse_number": 40,
    "arabic": "فِى جَنَّـٰتٍ يَتَسَآءَلُونَ",
    "transcription": "Fī jannātin - yatasā'alūn(a)."
  },
  {
    "verse_number": 41,
    "arabic": "عَنِ ٱلْمُجْرِمِينَ",
    "transcription": "'Anil-mujrimīn(a)."
  },
  {
    "verse_number": 42,
    "arabic": "مَا سَلَكَكُمْ فِى سَقَرَ",
    "transcription": "Mā salakakum fī saqar(a)."
  },
  {
    "verse_number": 43,
    "arabic": "قَالُوا۟ لَمْ نَكُ مِنَ ٱلْمُصَلِّينَ",
    "transcription": "Qālū lam naku minal-muṣallīn(a)."
  },
  {
    "verse_number": 44,
    "arabic": "وَلَمْ نَكُ نُطْعِمُ ٱلْمِسْكِينَ",
    "transcription": "Wa lam naku nuṭ'imul-miskīn(a)."
  },
  {
    "verse_number": 45,
    "arabic": "وَكُنَّا نَخُوضُ مَعَ ٱلْخَآئِضِينَ",
    "transcription": "Wa kunnā nakhūḍu ma'al-khā'iḍīn(a)."
  },
  {
    "verse_number": 46,
    "arabic": "وَكُنَّا نُكَذِّبُ بِيَوْمِ ٱلدِّينِ",
    "transcription": "Wa kunnā nukażżibu biyaumid-dīn(i)."
  },
  {
    "verse_number": 47,
    "arabic": "حَتَّىٰٓ أَتَىٰنَا ٱلْيَقِينُ",
    "transcription": "Ḥattā atānal-yaqīn(u)."
  },
  {
    "verse_number": 48,
    "arabic": "فَمَا تَنفَعُهُمْ شَفَـٰعَةُ ٱلشَّـٰفِعِينَ",
    "transcription": "Famā tanfa'uhum syafā'atusy-syāfi'īn(a)."
  },
  {
    "verse_number": 49,
    "arabic": "فَمَا لَهُمْ عَنِ ٱلتَّذْكِرَةِ مُعْرِضِينَ",
    "transcription": "Famā lahum 'anit-tażkirati mu'riḍīn(a)."
  },
  {
    "verse_number": 50,
    "arabic": "كَأَنَّهُمْ حُمُرٌ مُّسْتَنفِرَةٌ",
    "transcription": "Ka'annahum ḥumurum mustanfirah(tun)."
  },
  {
    "verse_number": 51,
    "arabic": "فَرَّتْ مِن قَسْوَرَةٍۭ",
    "transcription": "Farrat min qaswarah(tin)."
  },
  {
    "verse_number": 52,
    "arabic": "بَلْ يُرِيدُ كُلُّ ٱمْرِئٍ مِّنْهُمْ أَن يُؤْتَىٰ صُحُفًا مُّنَشَّرَةً",
    "transcription": "Bal yurīdu kullumri'im minhum ay yu'tā ṣuḥufam munasysyarah(tan)."
  },
  {
    "verse_number": 53,
    "arabic": "كَلَّا ۖ بَل لَّا يَخَافُونَ ٱلْـَٔاخِرَةَ",
    "transcription": "Kallā, bal lā yakhāfūnal-ākhirah(ta)."
  },
  {
    "verse_number": 54,
    "arabic": "كَلَّآ إِنَّهُۥ تَذْكِرَةٌ",
    "transcription": "Kallā innahū tażkirah(tun)."
  },
  {
    "verse_number": 55,
    "arabic": "فَمَن شَآءَ ذَكَرَهُۥ",
    "transcription": "Faman syā'a żakarah(ū)."
  },
  {
    "verse_number": 56,
    "arabic": "وَمَا يَذْكُرُونَ إِلَّآ أَن يَشَآءَ ٱللَّهُ ۚ هُوَ أَهْلُ ٱلتَّقْوَىٰ وَأَهْلُ ٱلْمَغْفِرَةِ",
    "transcription": "Wa mā yażkurūna illā ay yasyā'allāh(u), huwa ahlut-taqwā wa ahlul-magfirah(ti)."
  }
]