[
  {
    "verse_number": 1,
    "text_uthmani": " إِنَّآ أَعْطَيْنَـٰكَ ٱلْكَوْثَرَ",
    "text_uthmani_transcribed": "Innā a'ṭainākal-kauṡar(a)."
  },
  {
    "verse_number": 2,
    "text_uthmani": "فَصَلِّ لِرَبِّكَ وَٱنْحَرْ",
    "text_uthmani_transcribed": "Faṣalli lirabbika wanḥar."
  },
  {
    "verse_number": 3,
    "text_uthmani": "إِنَّ شَانِئَكَ هُوَ ٱلْأَبْتَرُ",
    "text_uthmani_transcribed": "Inna syāni'aka huwal-abtar(u)."
  }
