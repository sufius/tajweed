[
  {
    "verse_number": 1,
    "text_uthmani": " وَيْلٌ لِّلْمُطَفِّفِينَ",
    "text_uthmani_transcribed": "Wailul lil-muṭaffifīn(a)."
  },
  {
    "verse_number": 2,
    "text_uthmani": "ٱلَّذِينَ إِذَا ٱكْتَالُوا۟ عَلَى ٱلنَّاسِ يَسْتَوْفُونَ",
    "text_uthmani_transcribed": "Allażīna iżaktālū 'alan-nāsi yastaufūn(a)."
  },
  {
    "verse_number": 3,
    "text_uthmani": "وَإِذَا كَالُوهُمْ أَو وَّزَنُوهُمْ يُخْسِرُونَ",
    "text_uthmani_transcribed": "Wa iżā kālūhum au wazanūhum yukhsirūn(a)."
  },
  {
    "verse_number": 4,
    "text_uthmani": "أَلَا يَظُنُّ أُو۟لَـٰٓئِكَ أَنَّهُم مَّبْعُوثُونَ",
    "text_uthmani_transcribed": "Alā yaẓunnu ulā'ika annahum mab'ūṡūn(a)."
  },
  {
    "verse_number": 5,
    "text_uthmani": "لِيَوْمٍ عَظِيمٍ",
    "text_uthmani_transcribed": "Liyaumin 'aẓīm(in)."
  },
  {
    "verse_number": 6,
    "text_uthmani": "يَوْمَ يَقُومُ ٱلنَّاسُ لِرَبِّ ٱلْعَـٰلَمِينَ",
    "text_uthmani_transcribed": "Yauma yaqūmun-nāsu lirabbil-'ālamīn(a)."
  },
  {
    "verse_number": 7,
    "text_uthmani": "كَلَّآ إِنَّ كِتَـٰبَ ٱلْفُجَّارِ لَفِى سِجِّينٍ",
    "text_uthmani_transcribed": "Kallā inna kitābal-fujjāri lafī sijjīn(in)."
  },
  {
    "verse_number": 8,
    "text_uthmani": "وَمَآ أَدْرَىٰكَ مَا سِجِّينٌ",
    "text_uthmani_transcribed": "Wa mā adrāka mā sijjīn(un)."
  },
  {
    "verse_number": 9,
    "text_uthmani": "كِتَـٰبٌ مَّرْقُومٌ",
    "text_uthmani_transcribed": "Kitābum marqūm(un)."
  },
  {
    "verse_number": 10,
    "text_uthmani": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ",
    "text_uthmani_transcribed": "Wailuy yauma'iżil lil-mukażżibīn(a)."
  },
  {
    "verse_number": 11,
    "text_uthmani": "ٱلَّذِينَ يُكَذِّبُونَ بِيَوْمِ ٱلدِّينِ",
    "text_uthmani_transcribed": "Allażīna yukażżibūna biyaumid-dīn(i)."
  },
  {
    "verse_number": 12,
    "text_uthmani": "وَمَا يُكَذِّبُ بِهِۦٓ إِلَّا كُلُّ مُعْتَدٍ أَثِيمٍ",
    "text_uthmani_transcribed": "Wa mā yukażżibu bihī illā kullu mu'tadin aṡīm(in)."
  },
  {
    "verse_number": 13,
    "text_uthmani": "إِذَا تُتْلَىٰ عَلَيْهِ ءَايَـٰتُنَا قَالَ أَسَـٰطِيرُ ٱلْأَوَّلِينَ",
    "text_uthmani_transcribed": "Iżā tutlā 'alaihi āyātunā qāla asāṭīrul-awwalīn(a)."
  },
  {
    "verse_number": 14,
    "text_uthmani": "كَلَّا ۖ بَلْ ۜ رَانَ عَلَىٰ قُلُوبِهِم مَّا كَانُوا۟ يَكْسِبُونَ",
    "text_uthmani_transcribed": "Kallā bal…rāna 'alā qulūbihim mā kānū yaksibūn(a)."
  },
  {
    "verse_number": 15,
    "text_uthmani": "كَلَّآ إِنَّهُمْ عَن رَّبِّهِمْ يَوْمَئِذٍ لَّمَحْجُوبُونَ",
    "text_uthmani_transcribed": "Kallā innahum 'ar rabbihim yauma'iżil lamaḥjūbūn(a)."
  },
  {
    "verse_number": 16,
    "text_uthmani": "ثُمَّ إِنَّهُمْ لَصَالُوا۟ ٱلْجَحِيمِ",
    "text_uthmani_transcribed": "Ṡumma innahum laṣālul-jaḥīm(i)."
  },
  {
    "verse_number": 17,
    "text_uthmani": "ثُمَّ يُقَالُ هَـٰذَا ٱلَّذِى كُنتُم بِهِۦ تُكَذِّبُونَ",
    "text_uthmani_transcribed": "Ṡumma yuqālu hāżal-lażī kuntum bihī tukażżibūn(a)."
  },
  {
    "verse_number": 18,
    "text_uthmani": "كَلَّآ إِنَّ كِتَـٰبَ ٱلْأَبْرَارِ لَفِى عِلِّيِّينَ",
    "text_uthmani_transcribed": "Kallā inna kitābal-abrāri lafī 'illiyyīn(a)."
  },
  {
    "verse_number": 19,
    "text_uthmani": "وَمَآ أَدْرَىٰكَ مَا عِلِّيُّونَ",
    "text_uthmani_transcribed": "Wa mā adrāka mā 'illiyyūn(a)."
  },
  {
    "verse_number": 20,
    "text_uthmani": "كِتَـٰبٌ مَّرْقُومٌ",
    "text_uthmani_transcribed": "Kitābum marqūm(un)."
  },
  {
    "verse_number": 21,
    "text_uthmani": "يَشْهَدُهُ ٱلْمُقَرَّبُونَ",
    "text_uthmani_transcribed": "Yasyhaduhul-muqarrabūn(a)."
  },
  {
    "verse_number": 22,
    "text_uthmani": "إِنَّ ٱلْأَبْرَارَ لَفِى نَعِيمٍ",
    "text_uthmani_transcribed": "Innal-abrāra lafī na'īm(in)."
  },
  {
    "verse_number": 23,
    "text_uthmani": "عَلَى ٱلْأَرَآئِكِ يَنظُرُونَ",
    "text_uthmani_transcribed": "'Alal-arā'iki yanẓurūn(a)."
  },
  {
    "verse_number": 24,
    "text_uthmani": "تَعْرِفُ فِى وُجُوهِهِمْ نَضْرَةَ ٱلنَّعِيمِ",
    "text_uthmani_transcribed": "Ta'rifu fī wujūhihim naḍratan na'īm(i)."
  },
  {
    "verse_number": 25,
    "text_uthmani": "يُسْقَوْنَ مِن رَّحِيقٍ مَّخْتُومٍ",
    "text_uthmani_transcribed": "Yusqauna mir raḥīqim makhtūm(in)."
  },
  {
    "verse_number": 26,
    "text_uthmani": "خِتَـٰمُهُۥ مِسْكٌ ۚ وَفِى ذَٰلِكَ فَلْيَتَنَافَسِ ٱلْمُتَنَـٰفِسُونَ",
    "text_uthmani_transcribed": "Khitāmuhū misk(un), wa fī żālika falyatanāfasil-mutanāfisūn(a)."
  },
  {
    "verse_number": 27,
    "text_uthmani": "وَمِزَاجُهُۥ مِن تَسْنِيمٍ",
    "text_uthmani_transcribed": "Wa mizājuhū min tasnīm(in)."
  },
  {
    "verse_number": 28,
    "text_uthmani": "عَيْنًا يَشْرَبُ بِهَا ٱلْمُقَرَّبُونَ",
    "text_uthmani_transcribed": "'Ainay yasyrabu bihal-muqarrabūn(a)."
  },
  {
    "verse_number": 29,
    "text_uthmani": "إِنَّ ٱلَّذِينَ أَجْرَمُوا۟ كَانُوا۟ مِنَ ٱلَّذِينَ ءَامَنُوا۟ يَضْحَكُونَ",
    "text_uthmani_transcribed": "Innal-lażīna ajramū kānū minal-lażīna āmanū yaḍḥakūn(a)."
  },
  {
    "verse_number": 30,
    "text_uthmani": "وَإِذَا مَرُّوا۟ بِهِمْ يَتَغَامَزُونَ",
    "text_uthmani_transcribed": "Wa iżā marrū bihim yatagāmazūn(a)."
  },
  {
    "verse_number": 31,
    "text_uthmani": "وَإِذَا ٱنقَلَبُوٓا۟ إِلَىٰٓ أَهْلِهِمُ ٱنقَلَبُوا۟ فَكِهِينَ",
    "text_uthmani_transcribed": "Wa iżanqalabū ilā ahlihimunqalabū fakihīn(a)."
  },
  {
    "verse_number": 32,
    "text_uthmani": "وَإِذَا رَأَوْهُمْ قَالُوٓا۟ إِنَّ هَـٰٓؤُلَآءِ لَضَآلُّونَ",
    "text_uthmani_transcribed": "Wa iżā ra'auhum qālū inna hā'ulā'i laḍāllūn(a)."
  },
  {
    "verse_number": 33,
    "text_uthmani": "وَمَآ أُرْسِلُوا۟ عَلَيْهِمْ حَـٰفِظِينَ",
    "text_uthmani_transcribed": "Wa mā ursilū 'alaihim ḥāfiẓīn(a)."
  },
  {
    "verse_number": 34,
    "text_uthmani": "فَٱلْيَوْمَ ٱلَّذِينَ ءَامَنُوا۟ مِنَ ٱلْكُفَّارِ يَضْحَكُونَ",
    "text_uthmani_transcribed": "Fal-yaumal-lażīna āmanū minal kuffāri yaḍḥakūn(a)."
  },
  {
    "verse_number": 35,
    "text_uthmani": "عَلَى ٱلْأَرَآئِكِ يَنظُرُونَ",
    "text_uthmani_transcribed": "'Alal-arā'iki yanẓurūn(a)."
  },
  {
    "verse_number": 36,
    "text_uthmani": "هَلْ ثُوِّبَ ٱلْكُفَّارُ مَا كَانُوا۟ يَفْعَلُونَ",
    "text_uthmani_transcribed": "Hal ṡuwwibal-kuffāru mā kānū yaf'alūn(a)."
  }
]