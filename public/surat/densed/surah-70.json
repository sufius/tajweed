[
  {
    "verse_number": 1,
    "arabic": " سَأَلَ سَآئِلٌۢ بِعَذَابٍ وَاقِعٍ",
    "transcription": "Sa'ala sā'ilum bi'ażābiw wāqi'(in)."
  },
  {
    "verse_number": 2,
    "arabic": "لِّلْكَـٰفِرِينَ لَيْسَ لَهُۥ دَافِعٌ",
    "transcription": "Lil-kāfirīna laisa lahū dāfi'(un)."
  },
  {
    "verse_number": 3,
    "arabic": "مِّنَ ٱللَّهِ ذِى ٱلْمَعَارِجِ",
    "transcription": "Minallāhi żil-ma'ārij(i)."
  },
  {
    "verse_number": 4,
    "arabic": "تَعْرُجُ ٱلْمَلَـٰٓئِكَةُ وَٱلرُّوحُ إِلَيْهِ فِى يَوْمٍ كَانَ مِقْدَارُهُۥ خَمْسِينَ أَلْفَ سَنَةٍ",
    "transcription": "Ta'rujul-malā'ikatu war-rūḥu ilaihi fī yaumin kāna miqdāruhū khamsīna alfa sanah(tin)."
  },
  {
    "verse_number": 5,
    "arabic": "فَٱصْبِرْ صَبْرًا جَمِيلًا",
    "transcription": "Faṣbir ṣabran jamīlā(n)."
  },
  {
    "verse_number": 6,
    "arabic": "إِنَّهُمْ يَرَوْنَهُۥ بَعِيدًا",
    "transcription": "Innahum yaraunahū ba'īdā(n)."
  },
  {
    "verse_number": 7,
    "arabic": "وَنَرَىٰهُ قَرِيبًا",
    "transcription": "Wa narāhu qarībā(n)."
  },
  {
    "verse_number": 8,
    "arabic": "يَوْمَ تَكُونُ ٱلسَّمَآءُ كَٱلْمُهْلِ",
    "transcription": "Yauma takūnus-samā'u kal-muhl(i)."
  },
  {
    "verse_number": 9,
    "arabic": "وَتَكُونُ ٱلْجِبَالُ كَٱلْعِهْنِ",
    "transcription": "Wa takūnul-jibālu kal-'ihn(i)."
  },
  {
    "verse_number": 10,
    "arabic": "وَلَا يَسْـَٔلُ حَمِيمٌ حَمِيمًا",
    "transcription": "Wa lā yas'alu ḥamīmun ḥamīmā(n)."
  },
  {
    "verse_number": 11,
    "arabic": "يُبَصَّرُونَهُمْ ۚ يَوَدُّ ٱلْمُجْرِمُ لَوْ يَفْتَدِى مِنْ عَذَابِ يَوْمِئِذٍۭ بِبَنِيهِ",
    "transcription": "Yubaṣṣarūnahum, yawaddul-mujrimu lau yaftadī  min 'ażābi yaumi'iżim bibanīh(i)."
  },
  {
    "verse_number": 12,
    "arabic": "وَصَـٰحِبَتِهِۦ وَأَخِيهِ",
    "transcription": "Wa ṣāḥibatihī wa akhīh(i)."
  },
  {
    "verse_number": 13,
    "arabic": "وَفَصِيلَتِهِ ٱلَّتِى تُـْٔوِيهِ",
    "transcription": "Wa faṣīlatihil-latī tu'wīh(i)."
  },
  {
    "verse_number": 14,
    "arabic": "وَمَن فِى ٱلْأَرْضِ جَمِيعًا ثُمَّ يُنجِيهِ",
    "transcription": "Wa man fil-arḍi jamī'ā(n), ṡumma yunjīh(i)."
  },
  {
    "verse_number": 15,
    "arabic": "كَلَّآ ۖ إِنَّهَا لَظَىٰ",
    "transcription": "Kallā, innahā laẓā."
  },
  {
    "verse_number": 16,
    "arabic": "نَزَّاعَةً لِّلشَّوَىٰ",
    "transcription": "Nazzā'atal lisy-syawā."
  },
  {
    "verse_number": 17,
    "arabic": "تَدْعُوا۟ مَنْ أَدْبَرَ وَتَوَلَّىٰ",
    "transcription": "Tad'ū man adbara wa tawallā."
  },
  {
    "verse_number": 18,
    "arabic": "وَجَمَعَ فَأَوْعَىٰٓ",
    "transcription": "Wa jama'a fa'au'ā."
  },
  {
    "verse_number": 19,
    "arabic": "۞ إِنَّ ٱلْإِنسَـٰنَ خُلِقَ هَلُوعًا",
    "transcription": "Innal-insāna khuliqa halu'ā(n)."
  },
  {
    "verse_number": 20,
    "arabic": "إِذَا مَسَّهُ ٱلشَّرُّ جَزُوعًا",
    "transcription": "Iżā massahusy-syarru jazū'ā(n)."
  },
  {
    "verse_number": 21,
    "arabic": "وَإِذَا مَسَّهُ ٱلْخَيْرُ مَنُوعًا",
    "transcription": "Wa iżā massahul-khairu manū'ā(n)."
  },
  {
    "verse_number": 22,
    "arabic": "إِلَّا ٱلْمُصَلِّينَ",
    "transcription": "Illal-muṣallīn(a)."
  },
  {
    "verse_number": 23,
    "arabic": "ٱلَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ دَآئِمُونَ",
    "transcription": "Allażīna hum 'alā ṣalātihim dā'imūn(a)."
  },
  {
    "verse_number": 24,
    "arabic": "وَٱلَّذِينَ فِىٓ أَمْوَٰلِهِمْ حَقٌّ مَّعْلُومٌ",
    "transcription": "Wal-lażīna fī amwālihim ḥaqqum ma'lūm(un)."
  },
  {
    "verse_number": 25,
    "arabic": "لِّلسَّآئِلِ وَٱلْمَحْرُومِ",
    "transcription": "Lis-sā'ili wal-maḥrūm(i)."
  },
  {
    "verse_number": 26,
    "arabic": "وَٱلَّذِينَ يُصَدِّقُونَ بِيَوْمِ ٱلدِّينِ",
    "transcription": "Wal-lażīna yuṣaddiqūna biyaumid-dīn(i)."
  },
  {
    "verse_number": 27,
    "arabic": "وَٱلَّذِينَ هُم مِّنْ عَذَابِ رَبِّهِم مُّشْفِقُونَ",
    "transcription": "Wal-lażīna hum min 'ażābi rabbihim musyfiqūn(a)."
  },
  {
    "verse_number": 28,
    "arabic": "إِنَّ عَذَابَ رَبِّهِمْ غَيْرُ مَأْمُونٍ",
    "transcription": "Inna 'ażāba rabbihim gairu ma'mūn(in)."
  },
  {
    "verse_number": 29,
    "arabic": "وَٱلَّذِينَ هُمْ لِفُرُوجِهِمْ حَـٰفِظُونَ",
    "transcription": "Wal-lażīna hum lifurūjihim ḥāfiẓūn(a)."
  },
  {
    "verse_number": 30,
    "arabic": "إِلَّا عَلَىٰٓ أَزْوَٰجِهِمْ أَوْ مَا مَلَكَتْ أَيْمَـٰنُهُمْ فَإِنَّهُمْ غَيْرُ مَلُومِينَ",
    "transcription": "Illā 'alā azwājihim au mā malakat aimānuhum fa innahum gairu malūmīn(a)."
  },
  {
    "verse_number": 31,
    "arabic": "فَمَنِ ٱبْتَغَىٰ وَرَآءَ ذَٰلِكَ فَأُو۟لَـٰٓئِكَ هُمُ ٱلْعَادُونَ",
    "transcription": "Fa manibtagā warā'a żālika fa ulā'ika  humul-'ādūn(a)."
  },
  {
    "verse_number": 32,
    "arabic": "وَٱلَّذِينَ هُمْ لِأَمَـٰنَـٰتِهِمْ وَعَهْدِهِمْ رَٰعُونَ",
    "transcription": "Wal-lażīna hum li'amānātihim wa 'ahdihim rā'ūn(a)."
  },
  {
    "verse_number": 33,
    "arabic": "وَٱلَّذِينَ هُم بِشَهَـٰدَٰتِهِمْ قَآئِمُونَ",
    "transcription": "Wal-lażīna hum bisyahādātihim qā'imūn(a)."
  },
  {
    "verse_number": 34,
    "arabic": "وَٱلَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ يُحَافِظُونَ",
    "transcription": "Wal-lażīna hum 'alā ṣalātihim yuḥāfiẓūn(a)."
  },
  {
    "verse_number": 35,
    "arabic": "أُو۟لَـٰٓئِكَ فِى جَنَّـٰتٍ مُّكْرَمُونَ",
    "transcription": "Ulā'ika fī jannātim mukramūn(a)."
  },
  {
    "verse_number": 36,
    "arabic": "فَمَالِ ٱلَّذِينَ كَفَرُوا۟ قِبَلَكَ مُهْطِعِينَ",
    "transcription": "Famālil-lażīna kafarū qibalaka muhṭi'īn(a)."
  },
  {
    "verse_number": 37,
    "arabic": "عَنِ ٱلْيَمِينِ وَعَنِ ٱلشِّمَالِ عِزِينَ",
    "transcription": "'Anil-yamīni wa 'anisy-syimāli 'izīn(a)."
  },
  {
    "verse_number": 38,
    "arabic": "أَيَطْمَعُ كُلُّ ٱمْرِئٍ مِّنْهُمْ أَن يُدْخَلَ جَنَّةَ نَعِيمٍ",
    "transcription": "Ayaṭma'u kullumri'im minhum ay yudkhala jannata na'īm(in)."
  },
  {
    "verse_number": 39,
    "arabic": "كَلَّآ ۖ إِنَّا خَلَقْنَـٰهُم مِّمَّا يَعْلَمُونَ",
    "transcription": "Kallā, innā khalaqnāhum mimmā ya'malūn(a)."
  },
  {
    "verse_number": 40,
    "arabic": "فَلَآ أُقْسِمُ بِرَبِّ ٱلْمَشَـٰرِقِ وَٱلْمَغَـٰرِبِ إِنَّا لَقَـٰدِرُونَ",
    "transcription": "Falā uqsimu birabbil-masyāriqi wal-magāribi  innā laqādirūn(a)."
  },
  {
    "verse_number": 41,
    "arabic": "عَلَىٰٓ أَن نُّبَدِّلَ خَيْرًا مِّنْهُمْ وَمَا نَحْنُ بِمَسْبُوقِينَ",
    "transcription": "'Alā an nubaddila khairam minhum, wa mā naḥnu bimasbūqīn(a)."
  },
  {
    "verse_number": 42,
    "arabic": "فَذَرْهُمْ يَخُوضُوا۟ وَيَلْعَبُوا۟ حَتَّىٰ يُلَـٰقُوا۟ يَوْمَهُمُ ٱلَّذِى يُوعَدُونَ",
    "transcription": "Fa żarhum yakhūḍū  wa yal'abū ḥattā yulāqū yaumahumul-lażī yū'adūn(a)"
  },
  {
    "verse_number": 43,
    "arabic": "يَوْمَ يَخْرُجُونَ مِنَ ٱلْأَجْدَاثِ سِرَاعًا كَأَنَّهُمْ إِلَىٰ نُصُبٍ يُوفِضُونَ",
    "transcription": "Yauma yakhrujūna minal-ajdāṡi sirā'an ka'annahum ilā nuṣubiy yūfiḍūn(a)."
  },
  {
    "verse_number": 44,
    "arabic": "خَـٰشِعَةً أَبْصَـٰرُهُمْ تَرْهَقُهُمْ ذِلَّةٌ ۚ ذَٰلِكَ ٱلْيَوْمُ ٱلَّذِى كَانُوا۟ يُوعَدُونَ",
    "transcription": "Khāsyi'atan abṣāruhum tarhaquhum żillah(tun), żālikal-yaumul-lażī kānū yū'adūn(a)."
  }
]