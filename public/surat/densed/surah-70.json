[
  {
    "verse_number": 1,
    "text_uthmani": " سَأَلَ سَآئِلٌۢ بِعَذَابٍ وَاقِعٍ",
    "text_uthmani_transcribed": "Sa'ala sā'ilum bi'ażābiw wāqi'(in)."
  },
  {
    "verse_number": 2,
    "text_uthmani": "لِّلْكَـٰفِرِينَ لَيْسَ لَهُۥ دَافِعٌ",
    "text_uthmani_transcribed": "Lil-kāfirīna laisa lahū dāfi'(un)."
  },
  {
    "verse_number": 3,
    "text_uthmani": "مِّنَ ٱللَّهِ ذِى ٱلْمَعَارِجِ",
    "text_uthmani_transcribed": "Minallāhi żil-ma'ārij(i)."
  },
  {
    "verse_number": 4,
    "text_uthmani": "تَعْرُجُ ٱلْمَلَـٰٓئِكَةُ وَٱلرُّوحُ إِلَيْهِ فِى يَوْمٍ كَانَ مِقْدَارُهُۥ خَمْسِينَ أَلْفَ سَنَةٍ",
    "text_uthmani_transcribed": "Ta'rujul-malā'ikatu war-rūḥu ilaihi fī yaumin kāna miqdāruhū khamsīna alfa sanah(tin)."
  },
  {
    "verse_number": 5,
    "text_uthmani": "فَٱصْبِرْ صَبْرًا جَمِيلًا",
    "text_uthmani_transcribed": "Faṣbir ṣabran jamīlā(n)."
  },
  {
    "verse_number": 6,
    "text_uthmani": "إِنَّهُمْ يَرَوْنَهُۥ بَعِيدًا",
    "text_uthmani_transcribed": "Innahum yaraunahū ba'īdā(n)."
  },
  {
    "verse_number": 7,
    "text_uthmani": "وَنَرَىٰهُ قَرِيبًا",
    "text_uthmani_transcribed": "Wa narāhu qarībā(n)."
  },
  {
    "verse_number": 8,
    "text_uthmani": "يَوْمَ تَكُونُ ٱلسَّمَآءُ كَٱلْمُهْلِ",
    "text_uthmani_transcribed": "Yauma takūnus-samā'u kal-muhl(i)."
  },
  {
    "verse_number": 9,
    "text_uthmani": "وَتَكُونُ ٱلْجِبَالُ كَٱلْعِهْنِ",
    "text_uthmani_transcribed": "Wa takūnul-jibālu kal-'ihn(i)."
  },
  {
    "verse_number": 10,
    "text_uthmani": "وَلَا يَسْـَٔلُ حَمِيمٌ حَمِيمًا",
    "text_uthmani_transcribed": "Wa lā yas'alu ḥamīmun ḥamīmā(n)."
  },
  {
    "verse_number": 11,
    "text_uthmani": "يُبَصَّرُونَهُمْ ۚ يَوَدُّ ٱلْمُجْرِمُ لَوْ يَفْتَدِى مِنْ عَذَابِ يَوْمِئِذٍۭ بِبَنِيهِ",
    "text_uthmani_transcribed": "Yubaṣṣarūnahum, yawaddul-mujrimu lau yaftadī  min 'ażābi yaumi'iżim bibanīh(i)."
  },
  {
    "verse_number": 12,
    "text_uthmani": "وَصَـٰحِبَتِهِۦ وَأَخِيهِ",
    "text_uthmani_transcribed": "Wa ṣāḥibatihī wa akhīh(i)."
  },
  {
    "verse_number": 13,
    "text_uthmani": "وَفَصِيلَتِهِ ٱلَّتِى تُـْٔوِيهِ",
    "text_uthmani_transcribed": "Wa faṣīlatihil-latī tu'wīh(i)."
  },
  {
    "verse_number": 14,
    "text_uthmani": "وَمَن فِى ٱلْأَرْضِ جَمِيعًا ثُمَّ يُنجِيهِ",
    "text_uthmani_transcribed": "Wa man fil-arḍi jamī'ā(n), ṡumma yunjīh(i)."
  },
  {
    "verse_number": 15,
    "text_uthmani": "كَلَّآ ۖ إِنَّهَا لَظَىٰ",
    "text_uthmani_transcribed": "Kallā, innahā laẓā."
  },
  {
    "verse_number": 16,
    "text_uthmani": "نَزَّاعَةً لِّلشَّوَىٰ",
    "text_uthmani_transcribed": "Nazzā'atal lisy-syawā."
  },
  {
    "verse_number": 17,
    "text_uthmani": "تَدْعُوا۟ مَنْ أَدْبَرَ وَتَوَلَّىٰ",
    "text_uthmani_transcribed": "Tad'ū man adbara wa tawallā."
  },
  {
    "verse_number": 18,
    "text_uthmani": "وَجَمَعَ فَأَوْعَىٰٓ",
    "text_uthmani_transcribed": "Wa jama'a fa'au'ā."
  },
  {
    "verse_number": 19,
    "text_uthmani": "۞ إِنَّ ٱلْإِنسَـٰنَ خُلِقَ هَلُوعًا",
    "text_uthmani_transcribed": "Innal-insāna khuliqa halu'ā(n)."
  },
  {
    "verse_number": 20,
    "text_uthmani": "إِذَا مَسَّهُ ٱلشَّرُّ جَزُوعًا",
    "text_uthmani_transcribed": "Iżā massahusy-syarru jazū'ā(n)."
  },
  {
    "verse_number": 21,
    "text_uthmani": "وَإِذَا مَسَّهُ ٱلْخَيْرُ مَنُوعًا",
    "text_uthmani_transcribed": "Wa iżā massahul-khairu manū'ā(n)."
  },
  {
    "verse_number": 22,
    "text_uthmani": "إِلَّا ٱلْمُصَلِّينَ",
    "text_uthmani_transcribed": "Illal-muṣallīn(a)."
  },
  {
    "verse_number": 23,
    "text_uthmani": "ٱلَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ دَآئِمُونَ",
    "text_uthmani_transcribed": "Allażīna hum 'alā ṣalātihim dā'imūn(a)."
  },
  {
    "verse_number": 24,
    "text_uthmani": "وَٱلَّذِينَ فِىٓ أَمْوَٰلِهِمْ حَقٌّ مَّعْلُومٌ",
    "text_uthmani_transcribed": "Wal-lażīna fī amwālihim ḥaqqum ma'lūm(un)."
  },
  {
    "verse_number": 25,
    "text_uthmani": "لِّلسَّآئِلِ وَٱلْمَحْرُومِ",
    "text_uthmani_transcribed": "Lis-sā'ili wal-maḥrūm(i)."
  },
  {
    "verse_number": 26,
    "text_uthmani": "وَٱلَّذِينَ يُصَدِّقُونَ بِيَوْمِ ٱلدِّينِ",
    "text_uthmani_transcribed": "Wal-lażīna yuṣaddiqūna biyaumid-dīn(i)."
  },
  {
    "verse_number": 27,
    "text_uthmani": "وَٱلَّذِينَ هُم مِّنْ عَذَابِ رَبِّهِم مُّشْفِقُونَ",
    "text_uthmani_transcribed": "Wal-lażīna hum min 'ażābi rabbihim musyfiqūn(a)."
  },
  {
    "verse_number": 28,
    "text_uthmani": "إِنَّ عَذَابَ رَبِّهِمْ غَيْرُ مَأْمُونٍ",
    "text_uthmani_transcribed": "Inna 'ażāba rabbihim gairu ma'mūn(in)."
  },
  {
    "verse_number": 29,
    "text_uthmani": "وَٱلَّذِينَ هُمْ لِفُرُوجِهِمْ حَـٰفِظُونَ",
    "text_uthmani_transcribed": "Wal-lażīna hum lifurūjihim ḥāfiẓūn(a)."
  },
  {
    "verse_number": 30,
    "text_uthmani": "إِلَّا عَلَىٰٓ أَزْوَٰجِهِمْ أَوْ مَا مَلَكَتْ أَيْمَـٰنُهُمْ فَإِنَّهُمْ غَيْرُ مَلُومِينَ",
    "text_uthmani_transcribed": "Illā 'alā azwājihim au mā malakat aimānuhum fa innahum gairu malūmīn(a)."
  },
  {
    "verse_number": 31,
    "text_uthmani": "فَمَنِ ٱبْتَغَىٰ وَرَآءَ ذَٰلِكَ فَأُو۟لَـٰٓئِكَ هُمُ ٱلْعَادُونَ",
    "text_uthmani_transcribed": "Fa manibtagā warā'a żālika fa ulā'ika  humul-'ādūn(a)."
  },
  {
    "verse_number": 32,
    "text_uthmani": "وَٱلَّذِينَ هُمْ لِأَمَـٰنَـٰتِهِمْ وَعَهْدِهِمْ رَٰعُونَ",
    "text_uthmani_transcribed": "Wal-lażīna hum li'amānātihim wa 'ahdihim rā'ūn(a)."
  },
  {
    "verse_number": 33,
    "text_uthmani": "وَٱلَّذِينَ هُم بِشَهَـٰدَٰتِهِمْ قَآئِمُونَ",
    "text_uthmani_transcribed": "Wal-lażīna hum bisyahādātihim qā'imūn(a)."
  },
  {
    "verse_number": 34,
    "text_uthmani": "وَٱلَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ يُحَافِظُونَ",
    "text_uthmani_transcribed": "Wal-lażīna hum 'alā ṣalātihim yuḥāfiẓūn(a)."
  },
  {
    "verse_number": 35,
    "text_uthmani": "أُو۟لَـٰٓئِكَ فِى جَنَّـٰتٍ مُّكْرَمُونَ",
    "text_uthmani_transcribed": "Ulā'ika fī jannātim mukramūn(a)."
  },
  {
    "verse_number": 36,
    "text_uthmani": "فَمَالِ ٱلَّذِينَ كَفَرُوا۟ قِبَلَكَ مُهْطِعِينَ",
    "text_uthmani_transcribed": "Famālil-lażīna kafarū qibalaka muhṭi'īn(a)."
  },
  {
    "verse_number": 37,
    "text_uthmani": "عَنِ ٱلْيَمِينِ وَعَنِ ٱلشِّمَالِ عِزِينَ",
    "text_uthmani_transcribed": "'Anil-yamīni wa 'anisy-syimāli 'izīn(a)."
  },
  {
    "verse_number": 38,
    "text_uthmani": "أَيَطْمَعُ كُلُّ ٱمْرِئٍ مِّنْهُمْ أَن يُدْخَلَ جَنَّةَ نَعِيمٍ",
    "text_uthmani_transcribed": "Ayaṭma'u kullumri'im minhum ay yudkhala jannata na'īm(in)."
  },
  {
    "verse_number": 39,
    "text_uthmani": "كَلَّآ ۖ إِنَّا خَلَقْنَـٰهُم مِّمَّا يَعْلَمُونَ",
    "text_uthmani_transcribed": "Kallā, innā khalaqnāhum mimmā ya'malūn(a)."
  },
  {
    "verse_number": 40,
    "text_uthmani": "فَلَآ أُقْسِمُ بِرَبِّ ٱلْمَشَـٰرِقِ وَٱلْمَغَـٰرِبِ إِنَّا لَقَـٰدِرُونَ",
    "text_uthmani_transcribed": "Falā uqsimu birabbil-masyāriqi wal-magāribi  innā laqādirūn(a)."
  },
  {
    "verse_number": 41,
    "text_uthmani": "عَلَىٰٓ أَن نُّبَدِّلَ خَيْرًا مِّنْهُمْ وَمَا نَحْنُ بِمَسْبُوقِينَ",
    "text_uthmani_transcribed": "'Alā an nubaddila khairam minhum, wa mā naḥnu bimasbūqīn(a)."
  },
  {
    "verse_number": 42,
    "text_uthmani": "فَذَرْهُمْ يَخُوضُوا۟ وَيَلْعَبُوا۟ حَتَّىٰ يُلَـٰقُوا۟ يَوْمَهُمُ ٱلَّذِى يُوعَدُونَ",
    "text_uthmani_transcribed": "Fa żarhum yakhūḍū  wa yal'abū ḥattā yulāqū yaumahumul-lażī yū'adūn(a)"
  },
  {
    "verse_number": 43,
    "text_uthmani": "يَوْمَ يَخْرُجُونَ مِنَ ٱلْأَجْدَاثِ سِرَاعًا كَأَنَّهُمْ إِلَىٰ نُصُبٍ يُوفِضُونَ",
    "text_uthmani_transcribed": "Yauma yakhrujūna minal-ajdāṡi sirā'an ka'annahum ilā nuṣubiy yūfiḍūn(a)."
  },
  {
    "verse_number": 44,
    "text_uthmani": "خَـٰشِعَةً أَبْصَـٰرُهُمْ تَرْهَقُهُمْ ذِلَّةٌ ۚ ذَٰلِكَ ٱلْيَوْمُ ٱلَّذِى كَانُوا۟ يُوعَدُونَ",
    "text_uthmani_transcribed": "Khāsyi'atan abṣāruhum tarhaquhum żillah(tun), żālikal-yaumul-lażī kānū yū'adūn(a)."
  }
]