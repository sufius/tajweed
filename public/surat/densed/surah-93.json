[
  {
    "verse_number": 1,
    "arabic": " وَٱلضُّحَىٰ",
    "transcription": "Waḍ-ḍuḥā."
  },
  {
    "verse_number": 2,
    "arabic": "وَٱلَّيْلِ إِذَا سَجَىٰ",
    "transcription": "Wal-laili iżā sajā."
  },
  {
    "verse_number": 3,
    "arabic": "مَا وَدَّعَكَ رَبُّكَ وَمَا قَلَىٰ",
    "transcription": "Mā wadda'aka rabbuka wa mā qalā."
  },
  {
    "verse_number": 4,
    "arabic": "وَلَلْـَٔاخِرَةُ خَيْرٌ لَّكَ مِنَ ٱلْأُولَىٰ",
    "transcription": "Wa lal-ākhiratu khairul laka minal-ūlā."
  },
  {
    "verse_number": 5,
    "arabic": "وَلَسَوْفَ يُعْطِيكَ رَبُّكَ فَتَرْضَىٰٓ",
    "transcription": "Wa lasaufa yu'ṭīka rabbuka fa tarḍā."
  },
  {
    "verse_number": 6,
    "arabic": "أَلَمْ يَجِدْكَ يَتِيمًا فَـَٔاوَىٰ",
    "transcription": "Alam yajidka yatīman fa āwā."
  },
  {
    "verse_number": 7,
    "arabic": "وَوَجَدَكَ ضَآلًّا فَهَدَىٰ",
    "transcription": "Wa wajadaka ḍāllan fa hadā."
  },
  {
    "verse_number": 8,
    "arabic": "وَوَجَدَكَ عَآئِلًا فَأَغْنَىٰ",
    "transcription": "Wa wajadaka 'ā'ilan fa agnā."
  },
  {
    "verse_number": 9,
    "arabic": "فَأَمَّا ٱلْيَتِيمَ فَلَا تَقْهَرْ",
    "transcription": "Fa ammal-yatīma falā taqhar."
  },
  {
    "verse_number": 10,
    "arabic": "وَأَمَّا ٱلسَّآئِلَ فَلَا تَنْهَرْ",
    "transcription": "Wa ammas-sā'ila falā tanhar."
  },
  {
    "verse_number": 11,
    "arabic": "وَأَمَّا بِنِعْمَةِ رَبِّكَ فَحَدِّثْ",
    "transcription": "Wa ammā bini'mati rabbika fa ḥaddiṡ."
  }
]