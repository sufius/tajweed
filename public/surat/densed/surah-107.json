[
  {
    "verse_number": 1,
    "arabic": " أَرَءَيْتَ ٱلَّذِى يُكَذِّبُ بِٱلدِّينِ",
    "transcription": "Ara'aital-lażī yukażżibu bid-dīn(i)."
  },
  {
    "verse_number": 2,
    "arabic": "فَذَٰلِكَ ٱلَّذِى يَدُعُّ ٱلْيَتِيمَ",
    "transcription": "Fa żālikal-lażī yadu''ul-yatīm(a)."
  },
  {
    "verse_number": 3,
    "arabic": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ ٱلْمِسْكِينِ",
    "transcription": "Wa lā yaḥuḍḍu 'alā ṭa'āmil-miskīn(i)."
  },
  {
    "verse_number": 4,
    "arabic": "فَوَيْلٌ لِّلْمُصَلِّينَ",
    "transcription": "Fawailul lil-muṣallīn(a)."
  },
  {
    "verse_number": 5,
    "arabic": "ٱلَّذِينَ هُمْ عَن صَلَاتِهِمْ سَاهُونَ",
    "transcription": "Allażīna hum 'an ṣalātihim sāhūn(a)."
  },
  {
    "verse_number": 6,
    "arabic": "ٱلَّذِينَ هُمْ يُرَآءُونَ",
    "transcription": "Allażīna hum yurā'ūn(a)."
  },
  {
    "verse_number": 7,
    "arabic": "وَيَمْنَعُونَ ٱلْمَاعُونَ",
    "transcription": "Wa yamna'ūnal-mā'ūn(a)."
  }
]