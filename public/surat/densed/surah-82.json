[
  {
    "verse_number": 1,
    "arabic": " إِذَا ٱلسَّمَآءُ ٱنفَطَرَتْ",
    "transcription": "Iżas-samā'unfaṭarat."
  },
  {
    "verse_number": 2,
    "arabic": "وَإِذَا ٱلْكَوَاكِبُ ٱنتَثَرَتْ",
    "transcription": "Wa iżal-kawākibuntaṡarat."
  },
  {
    "verse_number": 3,
    "arabic": "وَإِذَا ٱلْبِحَارُ فُجِّرَتْ",
    "transcription": "Wa iżal-biḥāru fujjirat."
  },
  {
    "verse_number": 4,
    "arabic": "وَإِذَا ٱلْقُبُورُ بُعْثِرَتْ",
    "transcription": "Wa iżal-qubūru bu'ṡirat."
  },
  {
    "verse_number": 5,
    "arabic": "عَلِمَتْ نَفْسٌ مَّا قَدَّمَتْ وَأَخَّرَتْ",
    "transcription": "'Alimat nafsum mā qaddamat wa akhkharat."
  },
  {
    "verse_number": 6,
    "arabic": "يَـٰٓأَيُّهَا ٱلْإِنسَـٰنُ مَا غَرَّكَ بِرَبِّكَ ٱلْكَرِيمِ",
    "transcription": "Yā ayyuhal-insānu mā garraka birabbikal-karīm(i)."
  },
  {
    "verse_number": 7,
    "arabic": "ٱلَّذِى خَلَقَكَ فَسَوَّىٰكَ فَعَدَلَكَ",
    "transcription": "Allażī khalaqaka fa sawwāka fa 'adalak(a)."
  },
  {
    "verse_number": 8,
    "arabic": "فِىٓ أَىِّ صُورَةٍ مَّا شَآءَ رَكَّبَكَ",
    "transcription": "Fī ayyi ṣūratim mā syā'a rakkabak(a)."
  },
  {
    "verse_number": 9,
    "arabic": "كَلَّا بَلْ تُكَذِّبُونَ بِٱلدِّينِ",
    "transcription": "Kallā bal tukażżibūna bid-dīn(i)."
  },
  {
    "verse_number": 10,
    "arabic": "وَإِنَّ عَلَيْكُمْ لَحَـٰفِظِينَ",
    "transcription": "Wa inna 'alaikum laḥāfiẓīn(a)."
  },
  {
    "verse_number": 11,
    "arabic": "كِرَامًا كَـٰتِبِينَ",
    "transcription": "Kirāman kātibīn(a)."
  },
  {
    "verse_number": 12,
    "arabic": "يَعْلَمُونَ مَا تَفْعَلُونَ",
    "transcription": "Ya'lamūna mā taf'alūn(a)."
  },
  {
    "verse_number": 13,
    "arabic": "إِنَّ ٱلْأَبْرَارَ لَفِى نَعِيمٍ",
    "transcription": "Innal-abrāra lafī na'īm(in)."
  },
  {
    "verse_number": 14,
    "arabic": "وَإِنَّ ٱلْفُجَّارَ لَفِى جَحِيمٍ",
    "transcription": "Wa innal-fujjāra lafī jaḥīm(in)."
  },
  {
    "verse_number": 15,
    "arabic": "يَصْلَوْنَهَا يَوْمَ ٱلدِّينِ",
    "transcription": "Yaṣlaunahā yaumad-dīn(i)."
  },
  {
    "verse_number": 16,
    "arabic": "وَمَا هُمْ عَنْهَا بِغَآئِبِينَ",
    "transcription": "Wa mā hum 'anhā bigā'ibīn(a)."
  },
  {
    "verse_number": 17,
    "arabic": "وَمَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ",
    "transcription": "Wa mā adrāka mā yaumud-dīn(i)."
  },
  {
    "verse_number": 18,
    "arabic": "ثُمَّ مَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ",
    "transcription": "Ṡumma mā adrāka mā yaumud-dīn(i)."
  },
  {
    "verse_number": 19,
    "arabic": "يَوْمَ لَا تَمْلِكُ نَفْسٌ لِّنَفْسٍ شَيْـًٔا ۖ وَٱلْأَمْرُ يَوْمَئِذٍ لِّلَّهِ",
    "transcription": "Yauma lā tamliku nafsul linafsin syai'ā(n), wal-amru yauma'iżil lillāh(i)."
  }
]