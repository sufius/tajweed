[
  {
    "verse_number": 1,
    "text_uthmani": " إِذَا ٱلشَّمْسُ كُوِّرَتْ",
    "text_uthmani_transcribed": "Iżasy-syamsu kuwwirat."
  },
  {
    "verse_number": 2,
    "text_uthmani": "وَإِذَا ٱلنُّجُومُ ٱنكَدَرَتْ",
    "text_uthmani_transcribed": "Wa iżan-nujūmunkadarat."
  },
  {
    "verse_number": 3,
    "text_uthmani": "وَإِذَا ٱلْجِبَالُ سُيِّرَتْ",
    "text_uthmani_transcribed": "Wa iżal-jibālu suyyirat."
  },
  {
    "verse_number": 4,
    "text_uthmani": "وَإِذَا ٱلْعِشَارُ عُطِّلَتْ",
    "text_uthmani_transcribed": "Wa iżal-'isyāru 'uṭṭilat."
  },
  {
    "verse_number": 5,
    "text_uthmani": "وَإِذَا ٱلْوُحُوشُ حُشِرَتْ",
    "text_uthmani_transcribed": "Wa iżal-wuḥūsy ḥusyirat."
  },
  {
    "verse_number": 6,
    "text_uthmani": "وَإِذَا ٱلْبِحَارُ سُجِّرَتْ",
    "text_uthmani_transcribed": "Wa iżal-biḥāru sujjirat."
  },
  {
    "verse_number": 7,
    "text_uthmani": "وَإِذَا ٱلنُّفُوسُ زُوِّجَتْ",
    "text_uthmani_transcribed": "Wa iżan-nufūsu zuwwijat."
  },
  {
    "verse_number": 8,
    "text_uthmani": "وَإِذَا ٱلْمَوْءُۥدَةُ سُئِلَتْ",
    "text_uthmani_transcribed": "Wa iżal-mau'ūdatu su'ilat."
  },
  {
    "verse_number": 9,
    "text_uthmani": "بِأَىِّ ذَنۢبٍ قُتِلَتْ",
    "text_uthmani_transcribed": "Bi'ayyi żambin qutilat."
  },
  {
    "verse_number": 10,
    "text_uthmani": "وَإِذَا ٱلصُّحُفُ نُشِرَتْ",
    "text_uthmani_transcribed": "Wa iżaṣ-ṣuḥufu nusyirat."
  },
  {
    "verse_number": 11,
    "text_uthmani": "وَإِذَا ٱلسَّمَآءُ كُشِطَتْ",
    "text_uthmani_transcribed": "Wa iżas-samā'u kusyiṭat."
  },
  {
    "verse_number": 12,
    "text_uthmani": "وَإِذَا ٱلْجَحِيمُ سُعِّرَتْ",
    "text_uthmani_transcribed": "Wa iżal-jaḥīmu su''irat."
  },
  {
    "verse_number": 13,
    "text_uthmani": "وَإِذَا ٱلْجَنَّةُ أُزْلِفَتْ",
    "text_uthmani_transcribed": "Wa iżal-jannatu uzlifat."
  },
  {
    "verse_number": 14,
    "text_uthmani": "عَلِمَتْ نَفْسٌ مَّآ أَحْضَرَتْ",
    "text_uthmani_transcribed": "'Alimat nafsum mā aḥḍarat."
  },
  {
    "verse_number": 15,
    "text_uthmani": "فَلَآ أُقْسِمُ بِٱلْخُنَّسِ",
    "text_uthmani_transcribed": "Falā uqsimu bil-khunnas(i)."
  },
  {
    "verse_number": 16,
    "text_uthmani": "ٱلْجَوَارِ ٱلْكُنَّسِ",
    "text_uthmani_transcribed": "Al-jawāril-kunnas(i)."
  },
  {
    "verse_number": 17,
    "text_uthmani": "وَٱلَّيْلِ إِذَا عَسْعَسَ",
    "text_uthmani_transcribed": "Wal-laili iżā 'as'as(a)."
  },
  {
    "verse_number": 18,
    "text_uthmani": "وَٱلصُّبْحِ إِذَا تَنَفَّسَ",
    "text_uthmani_transcribed": "Waṣ-ṣubḥi iżā tanaffas(a)."
  },
  {
    "verse_number": 19,
    "text_uthmani": "إِنَّهُۥ لَقَوْلُ رَسُولٍ كَرِيمٍ",
    "text_uthmani_transcribed": "Innahū laqaulu rasūlin karīm(in)."
  },
  {
    "verse_number": 20,
    "text_uthmani": "ذِى قُوَّةٍ عِندَ ذِى ٱلْعَرْشِ مَكِينٍ",
    "text_uthmani_transcribed": "Żī quwwatin 'inda żil-'arsyi makīn(in)."
  },
  {
    "verse_number": 21,
    "text_uthmani": "مُّطَاعٍ ثَمَّ أَمِينٍ",
    "text_uthmani_transcribed": "Muṭā'in ṡamma amīn(in)."
  },
  {
    "verse_number": 22,
    "text_uthmani": "وَمَا صَاحِبُكُم بِمَجْنُونٍ",
    "text_uthmani_transcribed": "Wa mā ṣāḥibukum bimajnūn(in)."
  },
  {
    "verse_number": 23,
    "text_uthmani": "وَلَقَدْ رَءَاهُ بِٱلْأُفُقِ ٱلْمُبِينِ",
    "text_uthmani_transcribed": "Wa laqad ra'āhu bil-ufuqil-mubīn(i)."
  },
  {
    "verse_number": 24,
    "text_uthmani": "وَمَا هُوَ عَلَى ٱلْغَيْبِ بِضَنِينٍ",
    "text_uthmani_transcribed": "Wa mā huwa 'alal-gaibi biḍanīn(in)."
  },
  {
    "verse_number": 25,
    "text_uthmani": "وَمَا هُوَ بِقَوْلِ شَيْطَـٰنٍ رَّجِيمٍ",
    "text_uthmani_transcribed": "Wa mā huwa biqauli syaiṭānir rajīm(in)."
  },
  {
    "verse_number": 26,
    "text_uthmani": "فَأَيْنَ تَذْهَبُونَ",
    "text_uthmani_transcribed": "Fa aina tażhabūn(a)."
  },
  {
    "verse_number": 27,
    "text_uthmani": "إِنْ هُوَ إِلَّا ذِكْرٌ لِّلْعَـٰلَمِينَ",
    "text_uthmani_transcribed": "In huwa illā żikrul lil-'ālamīn(a)."
  },
  {
    "verse_number": 28,
    "text_uthmani": "لِمَن شَآءَ مِنكُمْ أَن يَسْتَقِيمَ",
    "text_uthmani_transcribed": "Liman syā'a minkum ay yastaqīm(a)."
  },
  {
    "verse_number": 29,
    "text_uthmani": "وَمَا تَشَآءُونَ إِلَّآ أَن يَشَآءَ ٱللَّهُ رَبُّ ٱلْعَـٰلَمِينَ",
    "text_uthmani_transcribed": "Wa mā tasyā'ūna illā ay yasyā'allāhu rabbul-'ālamīn(a)."
  }
]