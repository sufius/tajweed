[
  {
    "verse_number": 1,
    "arabic": " ٱقْرَأْ بِٱسْمِ رَبِّكَ ٱلَّذِى خَلَقَ",
    "transcription": "Iqra' bismi rabbikal-lażī khalaq(a)."
  },
  {
    "verse_number": 2,
    "arabic": "خَلَقَ ٱلْإِنسَـٰنَ مِنْ عَلَقٍ",
    "transcription": "Khalaqal-insāna min 'alaq(in)."
  },
  {
    "verse_number": 3,
    "arabic": "ٱقْرَأْ وَرَبُّكَ ٱلْأَكْرَمُ",
    "transcription": "Iqra' wa rabbukal-akram(u)."
  },
  {
    "verse_number": 4,
    "arabic": "ٱلَّذِى عَلَّمَ بِٱلْقَلَمِ",
    "transcription": "Allażī 'allama bil-qalam(i)."
  },
  {
    "verse_number": 5,
    "arabic": "عَلَّمَ ٱلْإِنسَـٰنَ مَا لَمْ يَعْلَمْ",
    "transcription": "'Allamal-insāna mā lam ya'lam."
  },
  {
    "verse_number": 6,
    "arabic": "كَلَّآ إِنَّ ٱلْإِنسَـٰنَ لَيَطْغَىٰٓ",
    "transcription": "Kallā innal-insāna layaṭgā."
  },
  {
    "verse_number": 7,
    "arabic": "أَن رَّءَاهُ ٱسْتَغْنَىٰٓ",
    "transcription": "Ar ra'āhustagnā."
  },
  {
    "verse_number": 8,
    "arabic": "إِنَّ إِلَىٰ رَبِّكَ ٱلرُّجْعَىٰٓ",
    "transcription": "Inna ilā rabbikar-ruj'ā."
  },
  {
    "verse_number": 9,
    "arabic": "أَرَءَيْتَ ٱلَّذِى يَنْهَىٰ",
    "transcription": "Ara'aital-lażī yanhā."
  },
  {
    "verse_number": 10,
    "arabic": "عَبْدًا إِذَا صَلَّىٰٓ",
    "transcription": "'Abdan iżā ṣallā."
  },
  {
    "verse_number": 11,
    "arabic": "أَرَءَيْتَ إِن كَانَ عَلَى ٱلْهُدَىٰٓ",
    "transcription": "Ara'aita in kāna 'alal-hudā."
  },
  {
    "verse_number": 12,
    "arabic": "أَوْ أَمَرَ بِٱلتَّقْوَىٰٓ",
    "transcription": "Au amara bit-taqwā."
  },
  {
    "verse_number": 13,
    "arabic": "أَرَءَيْتَ إِن كَذَّبَ وَتَوَلَّىٰٓ",
    "transcription": "Ara'aita in każżaba wa tawallā."
  },
  {
    "verse_number": 14,
    "arabic": "أَلَمْ يَعْلَم بِأَنَّ ٱللَّهَ يَرَىٰ",
    "transcription": "Alam ya'lam bi'annallāha yarā."
  },
  {
    "verse_number": 15,
    "arabic": "كَلَّا لَئِن لَّمْ يَنتَهِ لَنَسْفَعًۢا بِٱلنَّاصِيَةِ",
    "transcription": "Kallā la'il lam yantah(i), lanasfa'am bin-nāṣiyah(ti)."
  },
  {
    "verse_number": 16,
    "arabic": "نَاصِيَةٍ كَـٰذِبَةٍ خَاطِئَةٍ",
    "transcription": "Nāṣiyatin kāżibatin khāṭi'ah(tin)."
  },
  {
    "verse_number": 17,
    "arabic": "فَلْيَدْعُ نَادِيَهُۥ",
    "transcription": "Falyad'u nādiyah(ū)."
  },
  {
    "verse_number": 18,
    "arabic": "سَنَدْعُ ٱلزَّبَانِيَةَ",
    "transcription": "Sanad'uz-zabāniyah(ta)."
  },
  {
    "verse_number": 19,
    "arabic": "كَلَّا لَا تُطِعْهُ وَٱسْجُدْ وَٱقْتَرِب ۩",
    "transcription": "Kallā, lā tuṭi'hu wasjud waqtarib."
  }
]