  {
    "verse_number": 1,
    "arabic": "إِنَّآ أَنزَلْنَـٰهُ فِى لَيْلَةِ ٱلْقَدْرِ",
    "transcription": "Innā anzalnāhu fī lailatil-qadr(i)."
  },
  {
    "verse_number": 2,
    "arabic": "وَمَآ أَدْرَىٰكَ مَا لَيْلَةُ ٱلْقَدْرِ",
    "transcription": "Wa mā adrāka mā lailatul-qadr(i)."
  },
  {
    "verse_number": 3,
    "arabic": "لَيْلَةُ ٱلْقَدْرِ خَيْرٌ مِّنْ أَلْفِ شَهْرٍ",
    "transcription": "Lailatul-qadri khairum min alfi syahr(in)."
  },
  {
    "verse_number": 4,
    "arabic": "تَنَزَّلُ ٱلْمَلَـٰٓئِكَةُ وَٱلرُّوحُ فِيهَا بِإِذْنِ رَبِّهِم مِّن كُلِّ أَمْرٍ",
    "transcription": "Tanazzalul-malā'ikatu war rūḥu fīhā bi'iżni rabbihim min kulli amr(in)."
