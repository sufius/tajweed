[
  {
    "verse_number": 1,
    "transcription": "Iżā zulzilatil-arḍu zilzālahā."
  },
  {
    "verse_number": 2,
    "transcription": "Wa akhrajatil-arḍu aṡqālahā."
  },
  {
    "verse_number": 3,
    "transcription": "Wa qālal-insānu mā lahā."
  },
  {
    "verse_number": 4,
    "transcription": "Yauma'iżin tuḥaddiṡu akhbārahā."
  },
  {
    "verse_number": 5,
    "transcription": "Bi'anna rabbaka auḥā lahā."
  },
  {
    "verse_number": 6,
    "transcription": "Yauma'iżiy yaṣdurun-nāsu asytātā(n), liyurau a'mālahum."
  },
  {
    "verse_number": 7,
    "transcription": "Famay ya'mal miṡqāla żarratin khairay yarah(ū)."
  },
  {
    "verse_number": 8,
    "transcription": "Wa may ya'mal miṡqāla żarratin syarray yarah(ū)."
  }
]