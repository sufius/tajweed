[
  {
    "verse_number": 1,
    "transcription": "Lā uqsimu biyaumil-qiyāmah(ti)."
  },
  {
    "verse_number": 2,
    "transcription": "Wa lā uqsimu bin nafsil-lawwāmah(ti)."
  },
  {
    "verse_number": 3,
    "transcription": "Ayaḥsabul-insānu allan najma'a 'iẓāmah(ū)."
  },
  {
    "verse_number": 4,
    "transcription": "Balā qādirīna 'alā an nusawwiya banānah(ū)."
  },
  {
    "verse_number": 5,
    "transcription": "Bal yurīdul-insānu liyafjura amāmah(ū)."
  },
  {
    "verse_number": 6,
    "transcription": "Yas'alu ayyāna yaumul-qiyāmah(ti)."
  },
  {
    "verse_number": 7,
    "transcription": "Fa iżā bariqal-baṣar(u)."
  },
  {
    "verse_number": 8,
    "transcription": "Wa khasafal-qamar(u)."
  },
  {
    "verse_number": 9,
    "transcription": "Wa jumi'asy-syamsu wal-qamar(u)."
  },
  {
    "verse_number": 10,
    "transcription": "Yaqūlul-insānu yauma'iżin ainal-mafarr(u)."
  },
  {
    "verse_number": 11,
    "transcription": "Kallā lā wazar(a)."
  },
  {
    "verse_number": 12,
    "transcription": "Ilā rabbika yauma'iżinil-mustaqarr(u)."
  },
  {
    "verse_number": 13,
    "transcription": "Yunabba'ul-insānu yauma'iżim bimā qaddama wa akhkhar(a)."
  },
  {
    "verse_number": 14,
    "transcription": "Balil-insānu 'alā nafsihī baṣīrah(tun)."
  },
  {
    "verse_number": 15,
    "transcription": "Wa lau alqā ma'āżīrah(ū)."
  },
  {
    "verse_number": 16,
    "transcription": "Lā tuḥarrik bihī lisānaka lita'jala bih(ī)."
  },
  {
    "verse_number": 17,
    "transcription": "Inna 'alainā jam'ahū wa qur'ānah(ū)."
  },
  {
    "verse_number": 18,
    "transcription": "Fa iżā qara'nāhu fattabi' qur'ānah(ū)."
  },
  {
    "verse_number": 19,
    "transcription": "Ṡumma inna 'alainā bayānah(ū)."
  },
  {
    "verse_number": 20,
    "transcription": "Kallā bal tuḥibbūnal-'ājilah(ta)."
  },
  {
    "verse_number": 21,
    "transcription": "Wa tażarūnal-'ākhirah(ta)."
  },
  {
    "verse_number": 22,
    "transcription": "Wujūhuy yauma'iżin nāḍirah(tun)."
  },
  {
    "verse_number": 23,
    "transcription": "Ilā rabbihā nāẓirah(tun)."
  },
  {
    "verse_number": 24,
    "transcription": "Wa wujūhuy yauma'iżim bāsirah(tun)."
  },
  {
    "verse_number": 25,
    "transcription": "Taẓunnu ay yuf'ala bihā fāqirah(tun)."
  },
  {
    "verse_number": 26,
    "transcription": "Kallā iżā balagatit-tarāqiy(a)."
  },
  {
    "verse_number": 27,
    "transcription": "Wa qīla man…rāq(in)."
  },
  {
    "verse_number": 28,
    "transcription": "Wa ẓanna annahul-firāq(u)."
  },
  {
    "verse_number": 29,
    "transcription": "Waltaffatis-sāqu bis-sāq(i)."
  },
  {
    "verse_number": 30,
    "transcription": "Ilā rabbika yauma'iżinil-masāq(u)."
  },
  {
    "verse_number": 31,
    "transcription": "Falā ṣaddaqa wa lā ṣallā."
  },
  {
    "verse_number": 32,
    "transcription": "Wa lākin każżaba wa tawallā."
  },
  {
    "verse_number": 33,
    "transcription": "Ṡumma żahaba ilā ahlihī yatamaṭṭā."
  },
  {
    "verse_number": 34,
    "transcription": "Aulā laka fa'aulā."
  },
  {
    "verse_number": 35,
    "transcription": "Ṡumma aulā laka fa'aulā."
  },
  {
    "verse_number": 36,
    "transcription": "Ayaḥsabul-insānu ay yutraka sudā(n)."
  },
  {
    "verse_number": 37,
    "transcription": "Alam yaku nuṭfatam mim maniyyiy yumnā."
  },
  {
    "verse_number": 38,
    "transcription": "Ṡumma kāna 'alaqatan fa khalaqa fa sawwā."
  },
  {
    "verse_number": 39,
    "transcription": "Fa ja'ala minhuz-zaujainiż-żakara wal-unṡā."
  },
  {
    "verse_number": 40,
    "transcription": "Alaisa żālika  biqādirin 'alā ay yuḥyiyal-mautā."
  }
]