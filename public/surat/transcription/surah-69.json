[
  {
    "verse_number": 1,
    "transcription": "Al-ḥāqqah(tu)."
  },
  {
    "verse_number": 2,
    "transcription": "Mal-ḥāqqah(tu)."
  },
  {
    "verse_number": 3,
    "transcription": "Wa mā adrāka mal-ḥāqqah(tu)."
  },
  {
    "verse_number": 4,
    "transcription": "Każżabat ṡamūdu wa 'ādum bil-qāri'ah(ti)."
  },
  {
    "verse_number": 5,
    "transcription": "Fa'ammā ṡamūdu fa uhlikū biṭ-ṭāgiyah(ti)."
  },
  {
    "verse_number": 6,
    "transcription": "Wa ammā 'ādun fa'uhlikū birīḥin ṣarṣarin 'ātiyah(tin)."
  },
  {
    "verse_number": 7,
    "transcription": "Sakhkharahā 'alaihim sab'a layāliw wa ṡamāniyata ayyām(in), ḥusūman fataral-qauma fīhā ṣar'ā, ka'annahum a'jāzu nakhlin khāwiyah(tin)."
  },
  {
    "verse_number": 8,
    "transcription": "Fahal tarā lahum mim bāqiyah(tin)."
  },
  {
    "verse_number": 9,
    "transcription": "Wa jā'a fir'aunu wa man qablahū wal-mu'tafikātu bil-khāṭi'ah(ti)."
  },
  {
    "verse_number": 10,
    "transcription": "Fa 'aṣau rasūla rabbihim fa akhażahum akhżatar rābiyah(tan)."
  },
  {
    "verse_number": 11,
    "transcription": "Innā lammā ṭagal-mā'u ḥamalnākum fil-jāriyah(ti)."
  },
  {
    "verse_number": 12,
    "transcription": "Linaj'alahā lakum tażkirataw wa ta'iyahā użunuw wā'iyah(tun)."
  },
  {
    "verse_number": 13,
    "transcription": "Fa iżā nufikha fiṣ-ṣūri nafkhatuw wāḥidah(tun)."
  },
  {
    "verse_number": 14,
    "transcription": "Wa ḥumilatil-arḍu wal-jibālu fa dukkatā dakkataw wāḥidah(tan)."
  },
  {
    "verse_number": 15,
    "transcription": "Fayauma'iżiw waqa'atil-wāqi'ah(tu)."
  },
  {
    "verse_number": 16,
    "transcription": "Wansyaqqatis-samā'u fahiya yauma'iżiw wāhiyah(tun)."
  },
  {
    "verse_number": 17,
    "transcription": "Wal-malaku 'alā arjā'ihā, wa yaḥmilu 'arsya rabbika fauqahum yauma'iżin ṡamāniyah(tun)."
  },
  {
    "verse_number": 18,
    "transcription": "Yauma'iżin tu'raḍūna lā takhfā minkum khāfiyah(tun)."
  },
  {
    "verse_number": 19,
    "transcription": "Fa ammā man ūtiya kitābahū biyamīnihī fa yaqūlu hā'umuqra'ū kitābiyah."
  },
  {
    "verse_number": 20,
    "transcription": "Innī ẓanantu annī mulāqin ḥisābiyah."
  },
  {
    "verse_number": 21,
    "transcription": "Fa huwa fī 'īsyatir rāḍiyah(tin)."
  },
  {
    "verse_number": 22,
    "transcription": "Fī jannatin 'āliyah(tin)."
  },
  {
    "verse_number": 23,
    "transcription": "Quṭūfuhā dāniyah(tun)."
  },
  {
    "verse_number": 24,
    "transcription": "Kulū wasyrabū hanī'am bimā aslaftum fil-ayyāmil-khāliyah(ti)."
  },
  {
    "verse_number": 25,
    "transcription": "Wa ammā man ūtiya kitābahū bisyimālih(ī), fa yaqūlu yā laitanī lam ūta kitābiyah."
  },
  {
    "verse_number": 26,
    "transcription": "Wa lam adri mā ḥisābiyah."
  },
  {
    "verse_number": 27,
    "transcription": "Yā laitahā kānatil-qāḍiyah(ta)."
  },
  {
    "verse_number": 28,
    "transcription": "Mā agnā 'annī māliyah."
  },
  {
    "verse_number": 29,
    "transcription": "Halaka 'annī sulṭāniyah."
  },
  {
    "verse_number": 30,
    "transcription": "Khużūhu fagullūh(u)."
  },
  {
    "verse_number": 31,
    "transcription": "Ṡummal-jaḥīma ṣallūh(u)."
  },
  {
    "verse_number": 32,
    "transcription": "Ṡumma fī silsilatin żar'uhā sab'ūna żirā'an faslukūh(u)."
  },
  {
    "verse_number": 33,
    "transcription": "Innahū kāna lā yu'minu billāhil-'aẓīm(i)."
  },
  {
    "verse_number": 34,
    "transcription": "Wa lā yaḥuḍḍu 'alā ṭa'āmil-miskīn(i)."
  },
  {
    "verse_number": 35,
    "transcription": "Fa laisa lahul-yauma hāhunā ḥamīm(un)."
  },
  {
    "verse_number": 36,
    "transcription": "Wa lā ṭa'āmun illā min gislīn(in)."
  },
  {
    "verse_number": 37,
    "transcription": "Lā ya'kuluhū illal-khāṭi'ūn(a)."
  },
  {
    "verse_number": 38,
    "transcription": "Falā uqsimu bimā tubṣirūn(a)."
  },
  {
    "verse_number": 39,
    "transcription": "Wa mā lā tubṣirūn(a)."
  },
  {
    "verse_number": 40,
    "transcription": "Innahū laqaulu rasūlin karīm(in)."
  },
  {
    "verse_number": 41,
    "transcription": "Wa mā huwa biqauli syā'ir(in), qalīlam mā tu'minūn(a)."
  },
  {
    "verse_number": 42,
    "transcription": "Wa lā biqauli kāhin(in), qalīlam mā tażakkarūn(a)."
  },
  {
    "verse_number": 43,
    "transcription": "Tanzīlum mir rabbil-'ālamīn(a)."
  },
  {
    "verse_number": 44,
    "transcription": "Wa lau taqawwala 'alainā ba'ḍal-aqāwīl(i)."
  },
  {
    "verse_number": 45,
    "transcription": "La'akhażnā minhu  bil-yamīn(i)."
  },
  {
    "verse_number": 46,
    "transcription": "Ṡumma laqaṭa'nā minhul-watīn(a)."
  },
  {
    "verse_number": 47,
    "transcription": "Famā minkum min aḥadin 'anhu ḥājizīn(a)."
  },
  {
    "verse_number": 48,
    "transcription": "Wa innahū latażkiratul lil-muttaqīn(a)."
  },
  {
    "verse_number": 49,
    "transcription": "Wa innā lana'lamu anna minkum mukażżibīn(a)."
  },
  {
    "verse_number": 50,
    "transcription": "Wa innahū laḥasratun 'alal-kāfirīn(a)."
  },
  {
    "verse_number": 51,
    "transcription": "Wa innahū laḥaqqul-yaqīn(i)."
  },
  {
    "verse_number": 52,
    "transcription": "Fa sabbiḥ bismi rabbikal-'aẓīm(i)."
  }
]