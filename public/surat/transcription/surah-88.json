[
  {
    "verse_number": 1,
    "transcription": "Hal atāka ḥadīṡul-gāsyiyah(ti)."
  },
  {
    "verse_number": 2,
    "transcription": "Wujūhuy yauma'iżin khāsyi'ah(tun)."
  },
  {
    "verse_number": 3,
    "transcription": "'Amilatun nāṣibah(tun)."
  },
  {
    "verse_number": 4,
    "transcription": "Taṣlā nāran ḥāmiyah(tan)."
  },
  {
    "verse_number": 5,
    "transcription": "Tusqā min 'ainin āniyah(tin)."
  },
  {
    "verse_number": 6,
    "transcription": "Laisa lahum ṭa'āmun illā min ḍarī'(in)."
  },
  {
    "verse_number": 7,
    "transcription": "Lā yusminu wa lā yugnī min jū'(in)."
  },
  {
    "verse_number": 8,
    "transcription": "Wujūhuy yauma'iżin nā'imah(tun)."
  },
  {
    "verse_number": 9,
    "transcription": "Lisa'yihā rāḍiyah(tun)."
  },
  {
    "verse_number": 10,
    "transcription": "Fī jannatin 'āliyah(tin)."
  },
  {
    "verse_number": 11,
    "transcription": "Lā tasama'u fīhā lāgiyah(tan)."
  },
  {
    "verse_number": 12,
    "transcription": "Fīhā 'ainun jāriyah(tun)."
  },
  {
    "verse_number": 13,
    "transcription": "Fīhā sururum marfū'ah(tun)."
  },
  {
    "verse_number": 14,
    "transcription": "Wa akwābum mauḍū'ah(tun)."
  },
  {
    "verse_number": 15,
    "transcription": "Wa namāriqu maṣfūfah(tun)."
  },
  {
    "verse_number": 16,
    "transcription": "Wa zarābiyyu mabṡūṡah(tun)."
  },
  {
    "verse_number": 17,
    "transcription": "Afalā yanẓurūna ilal-ibili kaifa khuliqat."
  },
  {
    "verse_number": 18,
    "transcription": "Wa ilas-samā'i kaifa rufi'at."
  },
  {
    "verse_number": 19,
    "transcription": "Wa ilal-jibāli kaifa nuṣibat."
  },
  {
    "verse_number": 20,
    "transcription": "Wa ilal-arḍi kaifa suṭiḥat."
  },
  {
    "verse_number": 21,
    "transcription": "Fa żakkir, innamā anta mużakkir(un)."
  },
  {
    "verse_number": 22,
    "transcription": "Lasta 'alaihim bimusaiṭir(in)."
  },
  {
    "verse_number": 23,
    "transcription": "Illā man tawallā wa kafar(a)."
  },
  {
    "verse_number": 24,
    "transcription": "Fa yu'ażżibuhullāhul-'ażābal-akbar(a)."
  },
  {
    "verse_number": 25,
    "transcription": "Inna ilainā iyābahum."
  },
  {
    "verse_number": 26,
    "transcription": "Ṡumma inna 'alainā ḥisābahum."
  }
]