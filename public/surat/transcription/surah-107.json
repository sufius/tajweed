[
  {
    "verse_number": 1,
    "transcription": "Ara'aital-lażī yukażżibu bid-dīn(i)."
  },
  {
    "verse_number": 2,
    "transcription": "Fa żālikal-lażī yadu''ul-yatīm(a)."
  },
  {
    "verse_number": 3,
    "transcription": "Wa lā yaḥuḍḍu 'alā ṭa'āmil-miskīn(i)."
  },
  {
    "verse_number": 4,
    "transcription": "Fawailul lil-muṣallīn(a)."
  },
  {
    "verse_number": 5,
    "transcription": "Allażīna hum 'an ṣalātihim sāhūn(a)."
  },
  {
    "verse_number": 6,
    "transcription": "Allażīna hum yurā'ūn(a)."
  },
  {
    "verse_number": 7,
    "transcription": "Wa yamna'ūnal-mā'ūn(a)."
  }
]